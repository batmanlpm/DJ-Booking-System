<Window x:Class="DJBookingSystem.FileActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose File Action" 
        Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF69B4"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#00FF00"/>
        <SolidColorBrush x:Key="PanelColor" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="10" Margin="0,0,0,10" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Choose File Action" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                    <Button Content="âœ•" Click="Close_Click" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" Foreground="{StaticResource PrimaryColor}" BorderThickness="0" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Selection Info -->
            <Border Grid.Row="1" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <TextBlock x:Name="SelectionInfoText" Text="0 files selected" FontSize="14" FontWeight="Bold" Foreground="{StaticResource SecondaryColor}"/>
            </Border>

            <!-- Action Selection -->
            <Border Grid.Row="2" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="What would you like to do?" FontSize="13" FontWeight="Bold" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,15"/>
                    
                    <RadioButton x:Name="CopyRadio" Content="ðŸ“‹ Copy Files (keeps originals)" GroupName="FileAction" IsChecked="True" 
                                 Foreground="{StaticResource TextColor}" FontSize="13" Margin="0,8" FontWeight="SemiBold"/>
                    
                    <RadioButton x:Name="MoveRadio" Content="ðŸ“¦ Move Files (removes from current location)" GroupName="FileAction" 
                                 Foreground="{StaticResource TextColor}" FontSize="13" Margin="0,8" FontWeight="SemiBold"/>
                    
                    <RadioButton x:Name="DeleteRadio" Content="ðŸ—‘ï¸ Delete Files (âš ï¸ Cannot be undone!)" GroupName="FileAction" 
                                 Foreground="#FF6B6B" FontSize="13" Margin="0,8" FontWeight="SemiBold"/>
                    
                    <TextBlock Text="Note: You'll choose the destination folder in the next step" 
                               FontSize="10" FontStyle="Italic" Foreground="#888888" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="3" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Continue" Click="OK_Click" 
                            FontSize="14" FontWeight="Bold" Background="{StaticResource PrimaryColor}" 
                            Foreground="Black" BorderThickness="0" Padding="20,10" Margin="5" Cursor="Hand"/>
                    <Button Grid.Column="1" Content="Cancel" Click="Cancel_Click" 
                            FontSize="14" FontWeight="Bold" Background="#666666" 
                            Foreground="White" BorderThickness="0" Padding="20,10" Margin="5" Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
