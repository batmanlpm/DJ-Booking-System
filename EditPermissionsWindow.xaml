<Window x:Class="DJBookingSystem.EditPermissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User Permissions" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Edit Permissions"
                      FontSize="20"
                      FontWeight="Bold"/>
            <TextBlock x:Name="UserInfoTextBlock"
                      FontSize="12"
                      Foreground="Gray"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Booking Permissions -->
                <Border Background="#ECF0F1" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Booking Permissions"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>
                        <CheckBox x:Name="CanViewBookingsCheckBox" Content="View Bookings" Margin="0,5"/>
                        <CheckBox x:Name="CanCreateBookingsCheckBox" Content="Create Bookings" Margin="0,5"/>
                        <CheckBox x:Name="CanEditBookingsCheckBox" Content="Edit Bookings" Margin="0,5"/>
                        <CheckBox x:Name="CanDeleteBookingsCheckBox" Content="Delete Bookings" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Venue Permissions -->
                <Border Background="#ECF0F1" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Venue Permissions"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>
                        <CheckBox x:Name="CanViewVenuesCheckBox" Content="View Venues" Margin="0,5"/>
                        <CheckBox x:Name="CanRegisterVenuesCheckBox" Content="Register Venues" Margin="0,5"/>
                        <CheckBox x:Name="CanEditVenuesCheckBox" Content="Edit Venues" Margin="0,5"/>
                        <CheckBox x:Name="CanDeleteVenuesCheckBox" Content="Delete Venues" Margin="0,5"/>
                        <CheckBox x:Name="CanToggleVenueStatusCheckBox" Content="Toggle Venue Open/Closed" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Admin Permissions -->
                <Border Background="#ECF0F1" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Admin Permissions"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>
                        <CheckBox x:Name="CanManageUsersCheckBox" Content="Manage Users" Margin="0,5"/>
                        <CheckBox x:Name="CanCustomizeAppCheckBox" Content="Customize App" Margin="0,5"/>
                        <CheckBox x:Name="CanAccessSettingsCheckBox" Content="Access Settings" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- RadioBOSS Permissions -->
                <Border Background="#E67E22" Padding="15">
                    <StackPanel>
                        <TextBlock Text="RadioBOSS Permissions"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>
                        <CheckBox x:Name="CanViewRadioBossCheckBox" Content="View RadioBOSS Panel" Margin="0,5" Foreground="White"/>
                        <CheckBox x:Name="CanControlRadioBossCheckBox" Content="Control RadioBOSS (Execute Commands)" Margin="0,5" Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save"
                   Click="Save_Click"
                   Padding="20,10"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"/>
            <Button Content="Cancel"
                   Click="Cancel_Click"
                   Padding="20,10"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
