<Window x:Class="DJBookingSystem.FriendRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Friend Request"
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="SEND FRIEND REQUEST" FontSize="18" FontWeight="Bold" 
                      Foreground="{DynamicResource AppPrimaryBrush}" FontFamily="Consolas" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username Input -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="USERNAME" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" 
                          FontFamily="Consolas" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Background="#1A1A1A" Foreground="White" 
                        BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="1" 
                        Padding="10" FontSize="14" FontFamily="Consolas"/>
            </StackPanel>

            <!-- Optional Message -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="MESSAGE (OPTIONAL)" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" 
                          FontFamily="Consolas" Margin="0,0,0,5"/>
                <TextBox x:Name="MessageTextBox" Background="#1A1A1A" Foreground="White" 
                        BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="1" 
                        Padding="10" FontSize="13" FontFamily="Segoe UI" 
                        TextWrapping="Wrap" AcceptsReturn="True" MaxLength="200" Height="60"/>
                <TextBlock Text="Optional message to send with your request (max 200 characters)" 
                          FontSize="10" Foreground="#666" FontFamily="Consolas" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock x:Name="StatusText" Grid.Row="3" Text="" FontSize="11" Foreground="#FF0000" 
                      FontFamily="Consolas" TextWrapping="Wrap" VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="SEND REQUEST" Click="Send_Click" Background="#006600" Foreground="White" 
                       BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="2" 
                       FontWeight="Bold" FontFamily="Consolas" Padding="20,10" Margin="0,0,10,0" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
                
                <Button Content="CANCEL" Click="Cancel_Click" Background="#8B0000" Foreground="White" 
                       BorderBrush="#FF0000" BorderThickness="2" 
                       FontWeight="Bold" FontFamily="Consolas" Padding="20,10" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="#FF0000" BlurRadius="10" ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
