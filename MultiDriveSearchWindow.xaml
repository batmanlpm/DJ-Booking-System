<Window x:Class="DJBookingSystem.MultiDriveSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Candy-Bot Multi-Drive File Search" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF69B4"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#00FF00"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="PanelColor" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        
        <!-- Context Menu Item Style with Candy Theme Highlighting -->
        <Style x:Key="CandyMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DataGrid Row Style with Pink Selection -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Cell Style to ensure text stays black when selected -->
        <Style TargetType="DataGridCell">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>    
                <RowDefinition Height="Auto"/> 
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="10" Margin="0,0,0,10" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Candy-Bot Multi-Drive File Search" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="_" Click="Minimize_Click" Width="35" Height="35" Margin="5,0" Background="Transparent" Foreground="{StaticResource PrimaryColor}" BorderThickness="0" FontSize="20" FontWeight="Bold" ToolTip="Minimize"/>
                        <Button x:Name="MaximizeButton" Content="â–¡" Click="Maximize_Click" Width="35" Height="35" Margin="5,0" Background="Transparent" Foreground="{StaticResource PrimaryColor}" BorderThickness="0" FontSize="16" FontWeight="Bold" ToolTip="Maximize"/>
                        <Button Content="âœ•" Click="Close_Click" Width="35" Height="35" Background="Transparent" Foreground="{StaticResource PrimaryColor}" BorderThickness="0" FontSize="16" FontWeight="Bold" ToolTip="Close"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <WrapPanel HorizontalAlignment="Center">
                    <Button Content="ðŸ“ Select Drives" Click="SelectDrives_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#4CAF50"/>
                    <Button Content="ðŸ“„ Select Extensions" Click="SelectExtensions_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#2196F3"/>
                    <Button Content="ðŸ” SEARCH" Click="StartSearch_Click" Style="{StaticResource ToolbarButtonStyle}" Background="{StaticResource SecondaryColor}"/>
                    <Button Content="âš¡ File Actions" Click="FileActions_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#FF9800" IsEnabled="False" x:Name="FileActionsButton"/>
                    <Button Content="ðŸ›‘ CANCEL" Click="CancelOperation_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#F44336" Visibility="Collapsed" x:Name="CancelButton"/>
                    <Button Content="ðŸ“Š Export CSV" Click="ExportToCSV_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#9C27B0" IsEnabled="False" x:Name="ExportButton"/>
                    <Button Content="ðŸ—‘ï¸ Clear Results" Click="ClearResults_Click" Style="{StaticResource ToolbarButtonStyle}" Background="#F44336" IsEnabled="False" x:Name="ClearButton"/>
                </WrapPanel>
            </Border>

            <Border Grid.Row="2" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="DrivesLabel" Text="Drives: None selected" FontSize="11" Foreground="{StaticResource SecondaryColor}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="|" FontSize="11" Foreground="#666666" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ExtensionsLabel" Text="Extensions: None selected" FontSize="11" Foreground="{StaticResource SecondaryColor}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="|" FontSize="11" Foreground="#666666" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ResultsCountText" Text="Results: 0 files" FontSize="11" Foreground="{StaticResource SecondaryColor}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Select All" Click="SelectAll_Click" FontSize="10" Background="#555555" Foreground="White" BorderThickness="0" Padding="10,5" Margin="3" Cursor="Hand"/>
                        <Button Content="Select None" Click="SelectNone_Click" FontSize="10" Background="#555555" Foreground="White" BorderThickness="0" Padding="10,5" Margin="3" Cursor="Hand"/>
                        <TextBlock x:Name="SelectionCountText" Text="(0 selected)" FontSize="11" FontStyle="Italic" Foreground="{StaticResource TextColor}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="3" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="10">
                <DataGrid x:Name="ResultsDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         Background="#1A1A1A"
                         Foreground="{StaticResource TextColor}"
                         BorderBrush="{StaticResource PrimaryColor}"
                         BorderThickness="1"
                         GridLinesVisibility="Horizontal"
                         HorizontalGridLinesBrush="#333333"
                         RowBackground="#1A1A1A"
                         AlternatingRowBackground="#252525"
                         HeadersVisibility="Column"
                         SelectionMode="Extended"
                         SelectionUnit="FullRow"
                         SelectionChanged="ResultsDataGrid_SelectionChanged"
                         CanUserResizeRows="False"
                         CanUserReorderColumns="True"
                         CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="250"/>
                        <DataGridTextColumn Header="Extension" Binding="{Binding Extension}" Width="80"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}" Width="100"/>
                        <DataGridTextColumn Header="Drive" Binding="{Binding Drive}" Width="60"/>
                        <DataGridTextColumn Header="Modified" Binding="{Binding LastModified, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="150"/>
                        <DataGridTextColumn Header="Full Path" Binding="{Binding FilePath}" Width="*"/>
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu Background="#1A1A1A" BorderBrush="{StaticResource PrimaryColor}">
                            <MenuItem Header="Open File" Click="OpenFile_Click" Style="{StaticResource CandyMenuItemStyle}"/>
                            <MenuItem Header="Open Folder" Click="OpenFolder_Click" Style="{StaticResource CandyMenuItemStyle}"/>
                            <Separator/>
                            <MenuItem Header="Copy Path" Click="CopyPath_Click" Style="{StaticResource CandyMenuItemStyle}"/>
                            <MenuItem Header="Copy Name" Click="CopyName_Click" Style="{StaticResource CandyMenuItemStyle}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Border>

            <Border Grid.Row="4" Background="{StaticResource PanelColor}" CornerRadius="8" Padding="10" Margin="0,10,0,0">
                <Grid>
                    <TextBlock x:Name="StatusText" Text="Ready! Click 'Select Drives' and 'Select Extensions' to begin." FontFamily="Consolas" FontSize="12" Foreground="{StaticResource TextColor}"/>
                    
                    <ProgressBar x:Name="SearchProgressBar" Height="20" Width="200" HorizontalAlignment="Right" Visibility="Collapsed" Foreground="{StaticResource PrimaryColor}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
