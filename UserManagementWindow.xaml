<Window x:Class="DJBookingSystem.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management - SysAdmin Panel" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                  Text="User Management"
                  FontSize="20"
                  FontWeight="Bold"
                  Margin="0,0,0,10"/>

        <!-- Users DataGrid -->
        <DataGrid x:Name="UsersDataGrid"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="200"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Last Login" Binding="{Binding LastLogin, StringFormat=\{0:MM/dd/yyyy HH:mm\}}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add User"
                   Click="AddUser_Click"
                   Padding="15,5"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"/>
            <Button Content="Edit User"
                   Click="EditUser_Click"
                   Padding="15,5"
                   Margin="5"/>
            <Button Content="Edit Permissions"
                   Click="EditPermissions_Click"
                   Padding="15,5"
                   Margin="5"
                   Background="#3498DB"
                   Foreground="White"/>
            <Button Content="Detailed Permissions"
                   Click="DetailedPermissions_Click"
                   Padding="15,5"
                   Margin="5"
                   Background="#E67E22"
                   Foreground="White"/>
            <Button Content="Toggle Active/Inactive"
                   Click="ToggleActive_Click"
                   Padding="15,5"
                   Margin="5"/>
            <Button Content="Delete User"
                   Click="DeleteUser_Click"
                   Padding="15,5"
                   Margin="5"
                   Background="#E74C3C"
                   Foreground="White"/>
            <Button Content="Refresh"
                   Click="Refresh_Click"
                   Padding="15,5"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
