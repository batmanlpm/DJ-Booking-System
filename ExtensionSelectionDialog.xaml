<Window x:Class="DJBookingSystem.ExtensionSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select File Extensions" 
        Height="500" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF69B4"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#00FF00"/>
        <SolidColorBrush x:Key="PanelColor" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="Auto"/> <!-- Custom Input -->
                <RowDefinition Height="Auto"/> <!-- Quick Categories -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="10" Margin="0,0,0,10"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Select File Extensions" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryColor}"
                              VerticalAlignment="Center"/>
                    
                    <Button Content="âœ•" Click="Close_Click"
                           Width="30" Height="30" HorizontalAlignment="Right"
                           Background="Transparent" Foreground="{StaticResource PrimaryColor}"
                           BorderThickness="0" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Custom Input -->
            <Border Grid.Row="1" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Enter Custom Extensions:" 
                              FontSize="12" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryColor}"
                              Margin="0,0,0,10"/>
                    
                    <TextBox x:Name="ExtensionTextBox" Grid.Row="1"
                            FontFamily="Consolas" FontSize="14"
                            Background="#1A1A1A" Foreground="{StaticResource TextColor}"
                            BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2"
                            Padding="10" Height="40"
                            Text=".mp3, .wav, .flac"
                            ToolTip="Enter extensions like: .mp3, .txt, .docx, .world"/>
                </Grid>
            </Border>

            <!-- Quick Category Buttons -->
            <Border Grid.Row="2" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Quick Categories:" 
                              FontSize="12" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryColor}"
                              Margin="0,0,0,10"/>
                    
                    <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
                        <Button Content="Music" Click="QuickSearch_Music" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="Documents" Click="QuickSearch_Documents" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="Images" Click="QuickSearch_Images" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="Videos" Click="QuickSearch_Videos" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="Archives" Click="QuickSearch_Archives" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="Code" Click="QuickSearch_Code" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content=".world Files" Click="QuickSearch_World" Style="{StaticResource CategoryButtonStyle}" Background="#00BFFF"/>
                    </WrapPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="3" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="OK" Click="OK_Click"
                           FontSize="14" FontWeight="Bold"
                           Background="{StaticResource PrimaryColor}"
                           Foreground="Black" BorderThickness="0"
                           Padding="20,10" Margin="5"
                           Cursor="Hand"/>
                    
                    <Button Grid.Column="1" Content="Cancel" Click="Cancel_Click"
                           FontSize="14" FontWeight="Bold"
                           Background="#666666"
                           Foreground="White" BorderThickness="0"
                           Padding="20,10" Margin="5"
                           Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
