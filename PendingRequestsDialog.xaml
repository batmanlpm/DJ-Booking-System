<Window x:Class="DJBookingSystem.PendingRequestsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pending Friend Requests"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="500"
        WindowStyle="SingleBorderWindow">

    <Border BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="PENDING FRIEND REQUESTS" FontSize="18" FontWeight="Bold" 
                      Foreground="{DynamicResource AppPrimaryBrush}" FontFamily="Consolas" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Requests List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ItemsControl x:Name="RequestsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1A1A1A" BorderBrush="{DynamicResource AppPrimaryBrush}" 
                                       BorderThickness="1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Username and Date -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="{Binding FromUsername}" FontWeight="Bold" FontSize="14" 
                                                      Foreground="{DynamicResource AppPrimaryBrush}" FontFamily="Consolas"/>
                                            <TextBlock Text="{Binding SentAt, StringFormat='sent {0:MMM dd, yyyy HH:mm}'}" 
                                                      FontSize="11" Foreground="#666" FontFamily="Consolas" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Message (if any) -->
                                        <Border Grid.Row="1" Background="#0F0F0F" BorderBrush="#333" BorderThickness="1" 
                                               Padding="10" Margin="0,0,0,10" CornerRadius="3" 
                                               Visibility="{Binding MessageVisibility}">
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="12" 
                                                      Foreground="White" FontFamily="Segoe UI" FontStyle="Italic"/>
                                        </Border>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="ACCEPT" Click="Accept_Click" Tag="{Binding Id}" 
                                                   Background="#006600" Foreground="White" 
                                                   BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="1" 
                                                   FontWeight="Bold" FontFamily="Consolas" Padding="15,8" Margin="0,0,10,0" Cursor="Hand">
                                                <Button.Effect>
                                                    <DropShadowEffect Color="#00FF00" BlurRadius="8" ShadowDepth="0"/>
                                                </Button.Effect>
                                            </Button>
                                            
                                            <Button Content="DECLINE" Click="Decline_Click" Tag="{Binding Id}" 
                                                   Background="#8B0000" Foreground="White" 
                                                   BorderBrush="#FF0000" BorderThickness="1" 
                                                   FontWeight="Bold" FontFamily="Consolas" Padding="15,8" Cursor="Hand">
                                                <Button.Effect>
                                                    <DropShadowEffect Color="#FF0000" BlurRadius="8" ShadowDepth="0"/>
                                                </Button.Effect>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No Requests Message -->
                    <TextBlock x:Name="NoRequestsText" Text="No pending friend requests" 
                              FontSize="13" Foreground="#666" FontFamily="Consolas" 
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Margin="0,50,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="CLOSE" Click="Close_Click" Background="#1A1A1A" Foreground="White" 
                   BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="2" 
                   FontWeight="Bold" FontFamily="Consolas" Padding="20,10" Margin="0,20,0,0" 
                   HorizontalAlignment="Center" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
