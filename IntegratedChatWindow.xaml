<Window x:Class="DJBookingSystem.IntegratedChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Integrated Chat - Fallen Collective"
        Height="700" Width="900"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}">
    
    <Window.Resources>
        <!-- Channel Button Style -->
        <Style x:Key="ChannelButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="BorderBrush" Value="#00FF00"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0A0A0A" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="0,0,0,2" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="??" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock x:Name="HeaderText" Text="INTEGRATED CHAT" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" FontFamily="Consolas" VerticalAlignment="Center"/>
                    <TextBlock x:Name="OnlineUsersText" Text="? 0 users online" FontSize="12" Foreground="#888" FontFamily="Consolas" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="? CLOSE" Click="Close_Click" Background="#8B0000" Foreground="White" BorderBrush="#FF0000" BorderThickness="2" FontWeight="Bold" FontFamily="Consolas" Padding="15,8" Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Chat Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar - Channels -->
            <Border Grid.Column="0" Background="#0F0F0F" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="CHANNELS" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" Margin="0,0,0,10"/>
                        
                        <Button Content="World Chat" Click="WorldChat_Click" Tag="World" Style="{StaticResource ChannelButton}" Margin="0,2"/>
                        <Button Content="Support Tickets" Click="SupportTicket_Click" Tag="Support" Style="{StaticResource ChannelButton}" Margin="0,2"/>
                        <Button Content="Announcements" Click="Announcements_Click" Tag="Announcements" Style="{StaticResource ChannelButton}" Margin="0,2"/>
                        
                        <Separator Margin="0,15,0,10" Background="#333"/>
                        
                        <TextBlock x:Name="AdminChannelLabel" Text="ADMIN" FontSize="14" FontWeight="Bold" Foreground="#FF1493" Margin="0,0,0,10" Visibility="Collapsed"/>
                        <Button x:Name="AdminOnlyButton" Content="Admin Only" Click="AdminOnly_Click" Tag="AdminOnly" Style="{StaticResource ChannelButton}" Margin="0,2" Visibility="Collapsed"/>
                        
                        <Separator Margin="0,15,0,10" Background="#333"/>
                        
                        <!-- Friends Section -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="FRIENDS" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" Grid.Column="0"/>
                            <TextBlock x:Name="PendingRequestsBadge" Text="0" FontSize="10" FontWeight="Bold" Foreground="Black" Background="#FF0000" 
                                      Padding="4,2" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Visibility="Collapsed"/>
                        </Grid>
                        
                        <Button Content="+ Add Friend" Click="AddFriend_Click" Background="#006600" Foreground="White" BorderBrush="{DynamicResource AppPrimaryBrush}" 
                               BorderThickness="1" FontWeight="Bold" FontFamily="Consolas" Padding="8,5" Margin="0,0,0,5" Cursor="Hand" FontSize="11"/>
                        
                        <Button x:Name="ViewRequestsButton" Content="Pending Requests" Click="ViewRequests_Click" Background="#1A1A1A" Foreground="#FFD700" 
                               BorderBrush="#FFD700" BorderThickness="1" FontFamily="Consolas" Padding="8,5" Margin="0,0,0,10" Cursor="Hand" FontSize="11" Visibility="Collapsed"/>
                        
                        <!-- Friends List -->
                        <ItemsControl x:Name="FriendsList" ItemsSource="{Binding Friends}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="Friend_Click" Tag="{Binding Username}" Style="{StaticResource ChannelButton}" Margin="0,2" HorizontalContentAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#666"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                <Setter Property="Fill" Value="#00FF00"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Username}" FontFamily="Consolas" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <TextBlock Text="No friends yet" FontSize="11" Foreground="#666" FontFamily="Consolas" 
                                  Margin="10,10,0,0" FontStyle="Italic">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Friends.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Messages ScrollViewer -->
                <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="10">
                    <ItemsControl x:Name="MessagesPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1A1A1A" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="1" Padding="10" Margin="5" CornerRadius="5">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding SenderUsername}" FontWeight="Bold" Foreground="{DynamicResource AppPrimaryBrush}" FontFamily="Consolas" FontSize="12"/>
                                            <TextBlock Text="{Binding SenderRole}" FontSize="10" Foreground="#888" Margin="8,0,0,0" FontFamily="Consolas"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" FontSize="10" Foreground="#666" Margin="10,0,0,0" FontFamily="Consolas"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="White" FontSize="13" FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Message Input -->
                <Border Grid.Row="1" Background="#0F0F0F" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="0,1,0,0" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="MessageInput" Grid.Column="0" Background="#1A1A1A" Foreground="White" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="1" Padding="10" FontSize="13" FontFamily="Segoe UI" 
                                VerticalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="False" MaxLines="3" KeyDown="MessageInput_KeyDown" 
                                Text="Type your message..."/>
                        
                        <Button x:Name="SendButton" Grid.Column="1" Content="?? SEND" Click="Send_Click" Background="#006600" Foreground="White" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="2" 
                               FontWeight="Bold" FontFamily="Consolas" Padding="20,10" Margin="10,0,0,0" Cursor="Hand">
                            <Button.Effect>
                                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                            </Button.Effect>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#0A0A0A" BorderBrush="{DynamicResource AppPrimaryBrush}" BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock x:Name="StatusText" Text="Ready" FontSize="11" Foreground="#888" FontFamily="Consolas"/>
        </Border>
    </Grid>

    
</Window>
