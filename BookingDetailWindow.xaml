<Window x:Class="DJBookingSystem.BookingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Details" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" Margin="-20,-20,-20,20">
            <StackPanel>
                <TextBlock Text="ðŸ“… Booking Details"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="BookingSubtitleTextBlock"
                          Text="View booking information"
                          FontSize="12"
                          Foreground="#ECF0F1"/>
            </StackPanel>
        </Border>

        <!-- Booking Information -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information (Visible to Everyone) -->
                <Border Background="White" Padding="15" Margin="0,0,0,15" BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Basic Information"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="DJ Name:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DJNameTextBlock" Text="" Margin="0,5" FontSize="14"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Venue:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="VenueTextBlock" Text="" Margin="0,5" FontSize="14"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Date:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DateTextBlock" Text="" Margin="0,5" FontSize="14"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Created:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CreatedTextBlock" Text="" Margin="0,5" FontSize="12" Foreground="#7F8C8D"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Streaming Link (Visible to Venue Owners and Admins) -->
                <Border x:Name="StreamingLinkPanel"
                       Background="#E8F8F5"
                       Padding="15"
                       Margin="0,0,0,15"
                       BorderBrush="#27AE60"
                       BorderThickness="2"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ§ Streaming Information"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#27AE60"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="DJ Streaming Link:"
                                  FontWeight="Bold"
                                  Margin="0,0,0,5"/>

                        <TextBox x:Name="StreamingLinkTextBox"
                                Text=""
                                IsReadOnly="True"
                                Padding="10"
                                Background="White"
                                BorderBrush="#27AE60"
                                BorderThickness="1"
                                Margin="0,0,0,10"
                                TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ”— Copy Link"
                                   Click="CopyStreamingLink_Click"
                                   Padding="10,5"
                                   Margin="0,0,10,0"
                                   Background="#27AE60"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Cursor="Hand"/>
                            <Button Content="ðŸŒ Open in Browser"
                                   Click="OpenStreamingLink_Click"
                                   Padding="10,5"
                                   Background="#3498DB"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Access Info -->
                <Border Background="#FFF3CD" Padding="15" BorderBrush="#FFC107" BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="AccessInfoTextBlock"
                                  Text=""
                                  TextWrapping="Wrap"
                                  Foreground="#856404"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="Close"
               Click="Close_Click"
               Padding="20,10"
               Margin="0,15,0,0"
               Background="#95A5A6"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               HorizontalAlignment="Right"/>
    </Grid>
</Window>
