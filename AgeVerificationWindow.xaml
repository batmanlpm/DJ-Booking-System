<Window x:Class="DJBookingSystem.AgeVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Age Verification Required" 
        Height="450" 
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Border Background="#CC000000" 
            BorderBrush="#FF0000" 
            BorderThickness="3" 
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect Color="#FF0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Warning Icon -->
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Warning Icon -->
            <TextBlock Grid.Row="0"
                      Text="??"
                      FontSize="60"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Title -->
            <TextBlock Grid.Row="1"
                      Text="MATURE CONTENT WARNING"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="#FF0000"
                      FontFamily="Consolas"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="You are about to enable RAUNCHY MODE for Candy-Bot."
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#FFFFFF"
                              FontFamily="Consolas"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#1A0000" 
                            BorderBrush="#FF0000" 
                            BorderThickness="2"
                            Padding="15"
                            CornerRadius="8"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="This personality mode contains:"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#FF69B4"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,10"/>
                            
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="- Flirtatious language and innuendo"
                                          FontSize="13"
                                          Foreground="#FFFFFF"
                                          FontFamily="Consolas"
                                          Margin="0,3"/>
                                <TextBlock Text="- Suggestive humor and double meanings"
                                          FontSize="13"
                                          Foreground="#FFFFFF"
                                          FontFamily="Consolas"
                                          Margin="0,3"/>
                                <TextBlock Text="- Playful romantic content"
                                          FontSize="13"
                                          Foreground="#FFFFFF"
                                          FontFamily="Consolas"
                                          Margin="0,3"/>
                                <TextBlock Text="- Mature themes and expressions"
                                          FontSize="13"
                                          Foreground="#FFFFFF"
                                          FontFamily="Consolas"
                                          Margin="0,3"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="This mode is intended for users 18 years and older."
                              FontSize="14"
                              FontWeight="Bold"
                              Foreground="#FFFF00"
                              FontFamily="Consolas"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock Text="By continuing, you confirm that:"
                              FontSize="13"
                              Foreground="#FFFFFF"
                              FontFamily="Consolas"
                              Margin="0,0,0,10"/>
                    
                    <StackPanel Margin="15,0,0,0">
                        <CheckBox x:Name="AgeCheckbox"
                                 Content="I am 18 years of age or older"
                                 FontSize="12"
                                 Foreground="#FFFFFF"
                                 FontFamily="Consolas"
                                 Margin="0,5"
                                 Checked="AgeCheckbox_Changed"
                                 Unchecked="AgeCheckbox_Changed"/>
                        <CheckBox x:Name="ConsentCheckbox"
                                 Content="I consent to viewing mature content"
                                 FontSize="12"
                                 Foreground="#FFFFFF"
                                 FontFamily="Consolas"
                                 Margin="0,5"
                                 Checked="ConsentCheckbox_Changed"
                                 Unchecked="ConsentCheckbox_Changed"/>
                        <CheckBox x:Name="UnderstandCheckbox"
                                 Content="I understand this is for entertainment only"
                                 FontSize="12"
                                 Foreground="#FFFFFF"
                                 FontFamily="Consolas"
                                 Margin="0,5"
                                 Checked="UnderstandCheckbox_Changed"
                                 Unchecked="UnderstandCheckbox_Changed"/>
                    </StackPanel>
                    
                    <TextBlock Text="Note: Content is suggestive but never explicit."
                              FontSize="11"
                              FontStyle="Italic"
                              Foreground="#888888"
                              FontFamily="Consolas"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0">
                
                <Button x:Name="ContinueButton"
                       Content="I'm 18+ - Continue"
                       Click="Continue_Click"
                       Width="180"
                       Height="50"
                       Background="#FF69B4"
                       Foreground="#000000"
                       FontFamily="Consolas"
                       FontSize="14"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       IsEnabled="False"
                       Margin="5">
                    <Button.Effect>
                        <DropShadowEffect Color="#FF69B4" BlurRadius="15" ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
                
                <Button x:Name="CancelButton"
                       Content="Cancel"
                       Click="Cancel_Click"
                       Width="120"
                       Height="50"
                       Background="#333333"
                       Foreground="#FFFFFF"
                       FontFamily="Consolas"
                       FontSize="14"
                       BorderThickness="0"
                       Cursor="Hand"
                       Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
