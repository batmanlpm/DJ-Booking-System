<Window x:Class="DJBookingSystem.EditBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Booking" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="NoResize">

    <Border BorderBrush="#00FF00" BorderThickness="2" Background="#000000">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="EDIT BOOKING" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#00FF00" 
                      FontFamily="Consolas"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- DJ Name -->
                    <TextBlock Text="DJ Name:" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="DJNameTextBox" 
                            Background="#0A0A0A" 
                            Foreground="#00FF00" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2"
                            FontFamily="Consolas"
                            FontSize="14"
                            Padding="8"
                            Margin="0,0,0,15"/>

                    <!-- Venue -->
                    <TextBlock Text="Venue:" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox x:Name="VenueComboBox"
                             Background="#0A0A0A"
                             Foreground="#00FF00"
                             BorderBrush="#00FF00"
                             BorderThickness="2"
                             FontFamily="Consolas"
                             FontSize="14"
                             Padding="8"
                             Margin="0,0,0,15"/>

                    <!-- Booking Date -->
                    <TextBlock Text="Booking Date:" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" Margin="0,0,0,5"/>
                    <DatePicker x:Name="BookingDatePicker"
                               Background="#0A0A0A"
                               Foreground="#00FF00"
                               BorderBrush="#00FF00"
                               BorderThickness="2"
                               FontFamily="Consolas"
                               FontSize="14"
                               Margin="0,0,0,15"/>

                    <!-- Time Selection -->
                    <TextBlock Text="Booking Time:" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <ComboBox x:Name="HourComboBox"
                                 Background="#0A0A0A"
                                 Foreground="#00FF00"
                                 BorderBrush="#00FF00"
                                 BorderThickness="2"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Width="80"
                                 Margin="0,0,10,0"/>
                        <TextBlock Text=":" Foreground="#00FF00" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="MinuteComboBox"
                                 Background="#0A0A0A"
                                 Foreground="#00FF00"
                                 BorderBrush="#00FF00"
                                 BorderThickness="2"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Width="80"/>
                    </StackPanel>

                    <!-- Streaming Link -->
                    <TextBlock Text="Streaming Link:" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="StreamingLinkTextBox"
                            Background="#0A0A0A"
                            Foreground="#00FF00"
                            BorderBrush="#00FF00"
                            BorderThickness="2"
                            FontFamily="Consolas"
                            FontSize="14"
                            Padding="8"
                            Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0">
                <Button Content="💾 SAVE" 
                       Click="Save_Click"
                       Background="#0A0A0A"
                       Foreground="#00FF00"
                       BorderBrush="#00FF00"
                       BorderThickness="2"
                       FontFamily="Consolas"
                       FontSize="14"
                       FontWeight="Bold"
                       Padding="20,10"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0A0A0A"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#00FF00"/>
                                    <Setter Property="Foreground" Value="#000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="❌ CANCEL" 
                       Click="Cancel_Click"
                       Background="#0A0A0A"
                       Foreground="#FF0000"
                       BorderBrush="#FF0000"
                       BorderThickness="2"
                       FontFamily="Consolas"
                       FontSize="14"
                       FontWeight="Bold"
                       Padding="20,10"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0A0A0A"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF0000"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>