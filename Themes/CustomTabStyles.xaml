<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Override TabControl Style -->
    <Style x:Key="FuturisticTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <!-- Override TabItem Style - Red Selected / Blue Unselected -->
    <Style x:Key="FuturisticTabItemStyle" TargetType="TabItem">
        <Setter Property="Foreground" Value="#00FF00"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Margin" Value="2,2,2,0"/>
        <Setter Property="Padding" Value="14,7"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid>
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="#0000FF" 
                                BorderThickness="2" 
                                CornerRadius="8,8,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="Content" 
                                            ContentSource="Header"
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- SELECTED TAB - Red Border, Slightly Bigger, Green Text -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF0000"/>
                            <Setter TargetName="Bd" Property="BorderThickness" Value="3"/>
                            <Setter TargetName="Bd" Property="Background" Value="#000000"/>
                            <Setter Property="Foreground" Value="#00FF00"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="18,10"/>
                            <Setter TargetName="Bd" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FF0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Panel.ZIndex" Value="100"/>
                        </Trigger>
                        
                        <!-- UNSELECTED TAB - Blue Border, Slightly Smaller -->
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#0000FF"/>
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="Bd" Property="Background" Value="#000000"/>
                            <Setter Property="Foreground" Value="#00FF00"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="14,7"/>
                            <Setter TargetName="Bd" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#0000FF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Panel.ZIndex" Value="50"/>
                        </Trigger>
                        
                        <!-- HOVER STATE - Cyan highlight for unselected tabs -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsSelected" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#001100"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#00FFFF"/>
                            <Setter Property="Foreground" Value="#00FFFF"/>
                            <Setter TargetName="Bd" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
