<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ?? ANIMATED RAINBOW GRADIENT THEME - CONSTANTLY CYCLING COLORS -->
    
    <!-- Base colors for the rainbow cycle -->
    <Color x:Key="AccentColor">#ff00ff</Color>
    <Color x:Key="AccentDark">#cc00cc</Color>
    <Color x:Key="AccentLight">#ff33ff</Color>
    
    <!-- Animated Gradient Brush for Text -->
    <LinearGradientBrush x:Key="RainbowGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#ff0000" Offset="0.0"/>
            <GradientStop Color="#ff7f00" Offset="0.17"/>
            <GradientStop Color="#ffff00" Offset="0.33"/>
            <GradientStop Color="#00ff00" Offset="0.5"/>
            <GradientStop Color="#0000ff" Offset="0.67"/>
            <GradientStop Color="#4b0082" Offset="0.83"/>
            <GradientStop Color="#9400d3" Offset="1.0"/>
        </LinearGradientBrush.GradientStops>
        
        <!-- Animate the gradient -->
        <LinearGradientBrush.RelativeTransform>
            <TransformGroup>
                <TranslateTransform x:Name="GradientTransform">
                    <TranslateTransform.X>
                        <MultiBinding Converter="{StaticResource AnimationConverter}">
                            <Binding RelativeSource="{RelativeSource Self}"/>
                        </MultiBinding>
                    </TranslateTransform.X>
                </TranslateTransform>
            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
    </LinearGradientBrush>
    
    <!-- Use the animated brush as accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#ff00ff"/>
    
    <!-- Alternative: Create individual animated colors -->
    <SolidColorBrush x:Key="AnimatedAccentBrush">
        <SolidColorBrush.Color>
            <Color>#ff00ff</Color>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    
</ResourceDictionary>
