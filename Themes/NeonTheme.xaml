<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ðŸŒŒ COSMIC SPACE THEME - Matching Web Version ðŸŒŒ -->
    
    <!-- Primary Space Colors - Matching HTML exactly -->
    <Color x:Key="PrimaryBackgroundColor">#000000</Color>
    <Color x:Key="SecondaryBackgroundColor">#0A0A0A</Color>
    <Color x:Key="PrimaryForegroundColor">#00FF00</Color>
    <Color x:Key="AccentColor">#00FF00</Color>
    
    <!-- Tab Colors with Cosmic Glow -->
    <Color x:Key="TabItemBackgroundColor">#001100</Color>
    <Color x:Key="TabItemSelectedBackgroundColor">#003300</Color>
    <Color x:Key="TabItemMouseOverBackgroundColor">#002200</Color>
    <Color x:Key="TabItemBorderColor">#00FF00</Color>
    
    <!-- Cosmic Accent Colors -->
    <Color x:Key="NeonGreenColor">#00FF00</Color>
    <Color x:Key="CyanColor">#00FFFF</Color>
    <Color x:Key="MagentaColor">#FF00FF</Color>
    <Color x:Key="GoldColor">#FFD700</Color>
    <Color x:Key="PinkColor">#FF6B9D</Color>
    
    <!-- Status Colors -->
    <Color x:Key="DangerColor">#FF0000</Color>
    <Color x:Key="SuccessColor">#00FF00</Color>
    <Color x:Key="InfoColor">#00FFFF</Color>
    <Color x:Key="WarningColor">#FFAA00</Color>
    
    <!-- Utility Colors -->
    <Color x:Key="LimeColor">#00FF00</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="BlackColor">#000000</Color>
    <Color x:Key="DarkGrayColor">#111111</Color>
    
    <!-- Brushes for Easy Use -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{DynamicResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{DynamicResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{DynamicResource PrimaryForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    
    <SolidColorBrush x:Key="TabItemBackgroundBrush" Color="{DynamicResource TabItemBackgroundColor}"/>
    <SolidColorBrush x:Key="TabItemSelectedBackgroundBrush" Color="{DynamicResource TabItemSelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="TabItemMouseOverBackgroundBrush" Color="{DynamicResource TabItemMouseOverBackgroundColor}"/>
    <SolidColorBrush x:Key="TabItemBorderBrush" Color="{DynamicResource TabItemBorderColor}"/>
    
    <SolidColorBrush x:Key="NeonGreenBrush" Color="{DynamicResource NeonGreenColor}"/>
    <SolidColorBrush x:Key="CyanBrush" Color="{DynamicResource CyanColor}"/>
    <SolidColorBrush x:Key="MagentaBrush" Color="{DynamicResource MagentaColor}"/>
    <SolidColorBrush x:Key="GoldBrush" Color="{DynamicResource GoldColor}"/>
    <SolidColorBrush x:Key="PinkBrush" Color="{DynamicResource PinkColor}"/>
    
    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource InfoColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}"/>
    
    <SolidColorBrush x:Key="LimeBrush" Color="{DynamicResource LimeColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{DynamicResource WhiteColor}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{DynamicResource BlackColor}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{DynamicResource DarkGrayColor}"/>
    
    <!-- ðŸŒŸ Cosmic Gradient Backgrounds ðŸŒŸ -->
    <LinearGradientBrush x:Key="SpaceBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#000000" Offset="0"/>
        <GradientStop Color="#0A0A0A" Offset="0.5"/>
        <GradientStop Color="#000000" Offset="1"/>
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="NebulaBackgroundBrush" RadiusX="1" RadiusY="1" Center="0.5,0.5">
        <GradientStop Color="#1A0033" Offset="0"/>
        <GradientStop Color="#000000" Offset="0.7"/>
    </RadialGradientBrush>
    
    <!-- ðŸŽ¨ Glowing Button Style ðŸŽ¨ -->
    <Style x:Key="GlowingButtonStyle" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#003300" Offset="0"/>
                    <GradientStop Color="#006600" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#004400" Offset="0"/>
                            <GradientStop Color="#008800" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#002200" Offset="0"/>
                            <GradientStop Color="#004400" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- ðŸ“ Cosmic TextBox Style ðŸ“ -->
    <Style x:Key="CosmicTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="CaretBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="SelectionBrush" Value="#003300"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- ðŸ“‹ Cosmic ComboBox Style ðŸ“‹ -->
    <Style x:Key="CosmicComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,8"/>
    </Style>
    
    <!-- ðŸŽ¯ Cosmic DataGrid Style ðŸŽ¯ -->
    <Style x:Key="CosmicDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowBackground" Value="#001100"/>
        <Setter Property="AlternatingRowBackground" Value="#000000"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
    </Style>
    
    <!-- ðŸŒŸ Cosmic Label Style ðŸŒŸ -->
    <Style x:Key="CosmicLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <!-- ðŸ’« Cosmic GroupBox Style ðŸ’« -->
    <Style x:Key="CosmicGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Foreground" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
