<Window x:Class="DJBookingSystem.EventSchedulerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event &amp; Content Scheduler" Height="700" Width="1000"
        Background="#000000" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="ðŸ“… Event &amp; Content Scheduler" 
                   FontSize="24" FontWeight="Bold" Foreground="#00FF00" Margin="0,0,0,20"/>
        
        <!-- Calendar & Schedule List -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Calendar x:Name="EventCalendar" Grid.Row="0" 
                      Background="#001100" Foreground="#00FF00" 
                      BorderBrush="#00FF00" Margin="0,0,0,20"
                      SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
            
            <Border Grid.Row="1" BorderBrush="#00FF00" BorderThickness="1" Padding="10">
                <ScrollViewer>
                    <ItemsControl x:Name="ScheduledItemsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#00FF00" BorderThickness="1" Padding="10" Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#00FF00"/>
                                            <TextBlock Text="{Binding ScheduledTime, StringFormat='ðŸ• {0:MMM dd, yyyy HH:mm}'}" Foreground="#00FF00"/>
                                            <TextBlock Text="{Binding Platform, StringFormat='ðŸ“± {0}'}" Foreground="#00FF00"/>
                                            <TextBlock Text="{Binding Status}" Foreground="#00FF00"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="âœï¸" Width="30" Height="30" Margin="2" 
                                                    Tag="{Binding Id}" Click="Edit_Click"/>
                                            <Button Content="ðŸ—‘ï¸" Width="30" Height="30" Margin="2"
                                                    Tag="{Binding Id}" Click="Delete_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Add/Edit Panel -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#00FF00" BorderThickness="1" Padding="15">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Schedule New Event" FontSize="16" FontWeight="Bold" 
                               Foreground="#00FF00" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Title:" Foreground="#00FF00" Margin="0,5,0,2"/>
                    <TextBox x:Name="TitleTextBox" Background="#001100" Foreground="#00FF00" 
                             BorderBrush="#00FF00" Padding="5"/>
                    
                    <TextBlock Text="Description:" Foreground="#00FF00" Margin="0,10,0,2"/>
                    <TextBox x:Name="DescriptionTextBox" Background="#001100" Foreground="#00FF00" 
                             BorderBrush="#00FF00" Padding="5" Height="60" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Date &amp; Time:" Foreground="#00FF00" Margin="0,10,0,2"/>
                    <DatePicker x:Name="DatePicker" Background="#001100" Foreground="#00FF00" 
                                BorderBrush="#00FF00" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="HourTextBox" Grid.Column="0" Text="12" 
                                 Background="#001100" Foreground="#00FF00" BorderBrush="#00FF00" 
                                 Padding="5" Margin="0,0,5,0"/>
                        <TextBox x:Name="MinuteTextBox" Grid.Column="1" Text="00"
                                 Background="#001100" Foreground="#00FF00" BorderBrush="#00FF00" Padding="5"/>
                    </Grid>
                    
                    <TextBlock Text="Platform:" Foreground="#00FF00" Margin="0,10,0,2"/>
                    <ComboBox x:Name="PlatformComboBox" Background="#001100" Foreground="#00FF00" 
                              BorderBrush="#00FF00" Padding="5">
                        <ComboBoxItem Content="Website"/>
                        <ComboBoxItem Content="Twitter"/>
                        <ComboBoxItem Content="OnlyFans"/>
                        <ComboBoxItem Content="Instagram"/>
                        <ComboBoxItem Content="Custom"/>
                    </ComboBox>
                    
                    <TextBlock Text="File (Optional):" Foreground="#00FF00" Margin="0,10,0,2"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="FilePathTextBox" Grid.Column="0" Background="#001100" 
                                 Foreground="#00FF00" BorderBrush="#00FF00" Padding="5" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="Browse" Click="BrowseFile_Click" 
                                Width="70" Margin="5,0,0,0"/>
                    </Grid>
                    
                    <CheckBox x:Name="UploadToS3CheckBox" Content="Upload to S3" 
                              Foreground="#00FF00" Margin="0,10,0,0"/>
                    
                    <Button Content="ðŸ“… Schedule Event" Click="ScheduleEvent_Click" 
                            Margin="0,20,0,0" Padding="10" FontSize="14"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Stats Panel -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="#00FF00" BorderThickness="1" 
                Padding="15" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="StatsTextBlock" Foreground="#00FF00" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#002200"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
</Window>
