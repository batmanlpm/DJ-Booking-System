<Window x:Class="DJBookingSystem.EnhancedFileSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ” Enhanced File Search - Candy-Bot"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <StackPanel>
                <TextBlock Text="ðŸ” Enhanced File Search" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Search across all approved drives for any file type"
                           Foreground="LightGray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- File Type Selection -->
        <GroupBox Grid.Row="1" Header="ðŸ“ Select File Types to Search" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Quick Select Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Quick Select:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontWeight="Bold"/>
                    <Button Content="ðŸ“„ Documents" Click="QuickSelect_Click" Tag="Documents" Width="100" Margin="0,0,5,0"/>
                    <Button Content="ðŸŽµ Music" Click="QuickSelect_Click" Tag="Music" Width="100" Margin="0,0,5,0"/>
                    <Button Content="ðŸ–¼ï¸ Images" Click="QuickSelect_Click" Tag="Images" Width="100" Margin="0,0,5,0"/>
                    <Button Content="ðŸŽ¬ Videos" Click="QuickSelect_Click" Tag="Videos" Width="100" Margin="0,0,5,0"/>
                    <Button Content="ðŸ“¦ Archives" Click="QuickSelect_Click" Tag="Archives" Width="100" Margin="0,0,5,0"/>
                    <Button Content="âœ… All" Click="SelectAllTypes_Click" Width="80" Margin="10,0,5,0"/>
                    <Button Content="âŒ None" Click="DeselectAllTypes_Click" Width="80"/>
                </StackPanel>

                <Separator Grid.Row="1" Margin="5"/>

                <!-- File Type List -->
                <ListBox Grid.Row="2" 
                         x:Name="FileTypeListBox"
                         Margin="5"
                         BorderThickness="1"
                         BorderBrush="Gray">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="False" 
                                          VerticalAlignment="Center"
                                          Margin="5"/>
                                <TextBlock Text="{Binding Extension}" 
                                           Width="60"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Description}" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding Category, StringFormat='({0})'}" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           Foreground="Gray"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Custom Extensions -->
                <StackPanel Grid.Row="3" Margin="5">
                    <TextBlock Text="Custom Extensions (comma-separated):" 
                               Margin="0,5,0,5"/>
                    <TextBox x:Name="CustomExtensionTextBox"
                             Height="30"
                             VerticalContentAlignment="Center"
                             ToolTip="Example: .log, .dat, .conf"/>
                    <TextBlock Text="Example: .log, .dat, .conf" 
                               Foreground="Gray"
                               FontSize="10"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Search Options -->
        <GroupBox Grid.Row="2" Header="âš™ï¸ Search Options" Margin="10,0,10,10">
            <StackPanel Margin="5">
                <!-- Search Scope -->
                <CheckBox x:Name="SearchSpecificPathCheckBox" 
                          Content="Search specific folder only" 
                          Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" Margin="20,0,0,10">
                    <TextBox x:Name="SpecificPathTextBox"
                             Width="400"
                             Height="30"
                             VerticalContentAlignment="Center"
                             IsEnabled="{Binding ElementName=SearchSpecificPathCheckBox, Path=IsChecked}"/>
                    <Button Content="ðŸ“ Browse" 
                            Click="BrowseFolder_Click"
                            Width="100"
                            Height="30"
                            Margin="10,0,0,0"
                            IsEnabled="{Binding ElementName=SearchSpecificPathCheckBox, Path=IsChecked}"/>
                </StackPanel>

                <!-- Other Options -->
                <CheckBox x:Name="IncludeSubfoldersCheckBox" 
                          Content="Include subfolders" 
                          IsChecked="True"
                          Margin="0,0,0,5"/>
                
                <TextBlock Text="Note: Searching all drives may take several minutes" 
                           Foreground="Orange"
                           FontStyle="Italic"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Results -->
        <GroupBox Grid.Row="3" Header="ðŸ“Š Search Results" Margin="10,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Result Count -->
                <TextBlock Grid.Row="0" 
                           x:Name="ResultCountTextBlock"
                           Text="Results: 0 files"
                           FontWeight="Bold"
                           Margin="5"/>

                <!-- Results Grid -->
                <DataGrid Grid.Row="1"
                          x:Name="ResultsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          Margin="5"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File Name" 
                                          Binding="{Binding FileName}" 
                                          Width="*"
                                          MinWidth="200"/>
                        <DataGridTextColumn Header="Extension" 
                                          Binding="{Binding Extension}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Size (MB)" 
                                          Binding="{Binding SizeMB, StringFormat={}{0:F2}}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Modified" 
                                          Binding="{Binding LastModified, StringFormat={}{0:yyyy-MM-dd HH:mm}}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Location" 
                                          Binding="{Binding FilePath}" 
                                          Width="*"
                                          MinWidth="300"/>
                    </DataGrid.Columns>
                    
                    <!-- Context Menu -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ“‚ Open File" Click="OpenFile_Click"/>
                            <MenuItem Header="ðŸ“ Open Folder" Click="OpenFolder_Click"/>
                            <Separator/>
                            <MenuItem Header="ðŸ“‹ Copy Files..." Click="CopyFiles_Click"/>
                            <MenuItem Header="ðŸŽµ Create Playlist" Click="CreatePlaylist_Click"/>
                            <Separator/>
                            <MenuItem Header="ðŸ’¾ Export Results..." Click="ExportResults_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="ðŸ“‚ Open File" 
                    Click="OpenFile_Click" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ“ Open Folder" 
                    Click="OpenFolder_Click" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ“‹ Copy Selected" 
                    Click="CopyFiles_Click" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸŽµ Create Playlist" 
                    Click="CreatePlaylist_Click" 
                    Width="130" 
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ’¾ Export Results" 
                    Click="ExportResults_Click" 
                    Width="130" 
                    Height="35"/>
        </StackPanel>

        <!-- Status Bar with Search Button -->
        <Grid Grid.Row="5" Background="#2D2D30" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="StatusTextBlock" 
                       Text="Ready to search. Select file types and click Search." 
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="15,0"/>

            <Button Grid.Column="1"
                    x:Name="SearchButton"
                    Content="ðŸ” SEARCH"
                    Click="SearchButton_Click"
                    Width="150"
                    Height="40"
                    Margin="10"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#00D26A"
                    Foreground="White"
                    BorderBrush="#00D26A"/>
        </Grid>
    </Grid>
</Window>
