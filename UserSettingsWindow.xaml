<Window x:Class="DJBookingSystem.UserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Settings" Height="750" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20" Margin="-20,-20,-20,20">
            <StackPanel>
                <TextBlock Text="My Settings - Theme Customization"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="UserInfoTextBlock"
                          FontSize="14"
                          Foreground="#ECF0F1"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Theme Settings -->
                <StackPanel Grid.Column="0">
                    <!-- Theme Selection -->
                    <Border Background="#3498DB" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¨ Theme Selection"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Choose a Pre-Made Theme:" Foreground="White" Margin="0,5,0,5"/>
                            <ComboBox x:Name="ThemeComboBox"
                                     SelectionChanged="ThemeComboBox_SelectionChanged"
                                     Padding="8"
                                     FontSize="14">
                                <ComboBoxItem Content="â˜€ï¸ Default (Day Mode)" Tag="Default"/>
                                <ComboBoxItem Content="ðŸŒ™ Night Mode (Dark)" Tag="Night"/>
                                <ComboBoxItem Content="ðŸ’š Dark Green (Matrix)" Tag="DarkGreen"/>
                                <ComboBoxItem Content="ðŸŒ… Sunset (Warm)" Tag="Sunset"/>
                                <ComboBoxItem Content="ðŸŒŠ Ocean (Cool Blue)" Tag="Ocean"/>
                                <ComboBoxItem Content="ðŸ’œ Purple Haze" Tag="Purple"/>
                                <ComboBoxItem Content="ðŸŒƒ Midnight Blue" Tag="MidnightBlue"/>
                                <ComboBoxItem Content="âœ¨ Custom Theme" Tag="Custom"/>
                            </ComboBox>

                            <Button x:Name="CopyThemeButton"
                                   Content="ðŸ“‹ Copy Current Theme to Custom"
                                   Click="CopyTheme_Click"
                                   Margin="0,10,0,0"
                                   Padding="10,8"
                                   Background="#F39C12"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   ToolTip="Copy the currently selected theme's colors to customize"/>
                        </StackPanel>
                    </Border>

                    <!-- Custom Theme Colors -->
                    <Border x:Name="CustomThemePanel" Background="#9B59B6" Padding="20" Margin="0,0,0,15" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¨ Custom Theme Colors"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Customize every color of your interface. Enter hex color codes (e.g., #3498DB)"
                                      Foreground="White"
                                      FontSize="11"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Background Color:" Foreground="White" Margin="0,5,0,2"/>
                                    <TextBox x:Name="CustomBackgroundTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Text Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomTextTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Header Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomHeaderTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Menu Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomMenuTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Border Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomBorderTextBox" Padding="8" TextChanged="CustomColor_Changed"/>
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Button Color:" Foreground="White" Margin="0,5,0,2"/>
                                    <TextBox x:Name="CustomButtonTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Button Text Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomButtonTextTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Accent Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomAccentTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Success Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomSuccessTextBox" Padding="8" TextChanged="CustomColor_Changed"/>

                                    <TextBlock Text="Error Color:" Foreground="White" Margin="0,10,0,2"/>
                                    <TextBox x:Name="CustomErrorTextBox" Padding="8" TextChanged="CustomColor_Changed"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Login Settings -->
                    <Border Background="#27AE60" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ” Login Settings"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <CheckBox x:Name="RememberMeCheckBox"
                                     Content="Remember Me (Save username)"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,5"/>

                            <CheckBox x:Name="AutoLoginCheckBox"
                                     Content="Auto Login (Skip login screen)"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,5"/>

                            <TextBlock Text="âš ï¸ Auto Login will log you in automatically on app startup"
                                      Foreground="#FFE4CC"
                                      FontSize="11"
                                      Margin="20,5,0,0"
                                      TextWrapping="Wrap"
                                      FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Window Settings -->
                    <Border Background="#E67E22" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸªŸ Window Settings"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <CheckBox x:Name="StayOnTopCheckBox"
                                     Content="Always Stay On Top"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,5"
                                     Checked="StayOnTop_Changed"
                                     Unchecked="StayOnTop_Changed"/>

                            <TextBlock Text="Keep the application window above all other windows"
                                      Foreground="White"
                                      FontSize="11"
                                      Margin="20,5,0,0"
                                      TextWrapping="Wrap"
                                      FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column: Live Preview -->
                <Border Grid.Column="2" Background="#34495E" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘ï¸ Live Preview"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <!-- Preview Panel -->
                        <Border x:Name="PreviewBorder"
                               Background="White"
                               Padding="15"
                               BorderThickness="2"
                               BorderBrush="Gray"
                               CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="ðŸ“„ Background"
                                          x:Name="PreviewBackground"
                                          FontSize="12"
                                          Margin="0,5"/>

                                <TextBlock Text="ðŸ“ Sample Text"
                                          x:Name="PreviewText"
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Margin="0,5"/>

                                <Border Background="#2C3E50"
                                       x:Name="PreviewHeader"
                                       Padding="10"
                                       Margin="0,10,0,5">
                                    <TextBlock Text="ðŸ“‹ Header/Menu"
                                              Foreground="White"
                                              FontSize="12"/>
                                </Border>

                                <Button Content="ðŸ”˜ Button"
                                       x:Name="PreviewButton"
                                       Background="#3498DB"
                                       Foreground="White"
                                       Margin="0,10,0,5"
                                       Padding="10,5"/>

                                <Border BorderThickness="2"
                                       x:Name="PreviewBorderElement"
                                       BorderBrush="Gray"
                                       Padding="8"
                                       Margin="0,5">
                                    <TextBlock Text="ðŸ”² Border Example"
                                              FontSize="11"/>
                                </Border>

                                <TextBlock x:Name="PreviewAccent"
                                          Text="âœ¨ Accent Color"
                                          Foreground="#3498DB"
                                          FontSize="12"
                                          FontWeight="Bold"
                                          Margin="0,5"/>

                                <TextBlock x:Name="PreviewSuccess"
                                          Text="âœ… Success Color"
                                          Foreground="#27AE60"
                                          FontSize="12"
                                          Margin="0,5"/>

                                <TextBlock x:Name="PreviewError"
                                          Text="âŒ Error Color"
                                          Foreground="#E74C3C"
                                          FontSize="12"
                                          Margin="0,5"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Preview updates in real-time as you change colors"
                                  Foreground="White"
                                  FontSize="10"
                                  TextAlignment="Center"
                                  Margin="0,10,0,0"
                                  TextWrapping="Wrap"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ðŸ’¾ Save and Apply Theme"
                   Click="Save_Click"
                   Padding="25,12"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"/>
            <Button Content="ðŸ”„ Reset to Default"
                   Click="Reset_Click"
                   Padding="25,12"
                   Margin="5"
                   Background="#E67E22"
                   Foreground="White"
                   FontSize="14"/>
            <Button Content="âŒ Cancel"
                   Click="Cancel_Click"
                   Padding="25,12"
                   Margin="5"
                   Background="#95A5A6"
                   Foreground="White"
                   FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
