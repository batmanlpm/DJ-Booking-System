<Window x:Class="DJBookingSystem.DriveSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Drives to Search" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF69B4"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#00FF00"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="PanelColor" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Drive List -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="10" Margin="0,0,0,10"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Select Drives to Search" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryColor}"
                              VerticalAlignment="Center"/>
                    
                    <Button Content="âœ•" Click="Close_Click"
                           Width="30" Height="30" HorizontalAlignment="Right"
                           Background="Transparent" Foreground="{StaticResource PrimaryColor}"
                           BorderThickness="0" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Drive Selection -->
            <Border Grid.Row="1" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Available Drives:" 
                              FontSize="12" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryColor}"
                              Margin="0,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <StackPanel x:Name="DriveStackPanel"/>
                    </ScrollViewer>
                    
                    <Button Grid.Row="2" Content="Select All Drives"
                           Click="SelectAllDrives_Click"
                           FontSize="12" FontWeight="Bold"
                           Background="{StaticResource SecondaryColor}"
                           Foreground="Black" BorderThickness="0"
                           Padding="15,8" HorizontalAlignment="Center"
                           Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="{StaticResource PanelColor}" 
                    CornerRadius="8" Padding="15" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="OK" Click="OK_Click"
                           FontSize="14" FontWeight="Bold"
                           Background="{StaticResource PrimaryColor}"
                           Foreground="Black" BorderThickness="0"
                           Padding="20,10" Margin="5"
                           Cursor="Hand"/>
                    
                    <Button Grid.Column="1" Content="Cancel" Click="Cancel_Click"
                           FontSize="14" FontWeight="Bold"
                           Background="#666666"
                           Foreground="White" BorderThickness="0"
                           Padding="20,10" Margin="5"
                           Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
