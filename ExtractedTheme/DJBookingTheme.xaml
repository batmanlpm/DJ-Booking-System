    <!-- Available Time Slot Style -->
    <Style x:Key="AvailableTimeSlotStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#002200" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource ThinBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="3,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#003300" Opacity="0.8"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform X="3"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Booked Time Slot Style -->
    <Style x:Key="BookedTimeSlotStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#220000" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorRedBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource ThinBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="3,0"/>
        <Setter Property="Cursor" Value="No"/>
    </Style>
    
    <!-- Closed Time Slot Style -->
    <Style x:Key="ClosedTimeSlotStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#111111" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#333333"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="{StaticResource ThinBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="3,0"/>
        <Setter Property="Cursor" Value="No"/>
    </Style>
    
    <!-- Closed But Bookable Time Slot Style -->
    <Style x:Key="ClosedButBookableTimeSlotStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#221100" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource OrangeAccentBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource ThinBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="3,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#331900" Opacity="0.8"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform X="3"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource OrangeAccentColor}" 
                                        BlurRadius="10" 
                                        ShadowDepth="0" 
                                        Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================
         VENUE CARD STYLES
         ======================================== -->
    
    <!-- Venue Card Style -->
    <Style x:Key="VenueCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonGreenBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource MediumBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource XLargeCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource XLargePadding}"/>
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
