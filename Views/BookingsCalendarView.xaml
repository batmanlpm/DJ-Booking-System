<UserControl x:Class="DJBookingSystem.Views.BookingsCalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1160"
             Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Venue Selection -->
        <Border Grid.Row="0" 
                Background="#0A0A0A" 
                BorderBrush="#00FF00" 
                BorderThickness="0,0,0,2" 
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Venue Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="VENUE:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas"
                              FontWeight="Bold"
                              FontSize="14"
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <ComboBox x:Name="VenueComboBox"
                             Width="300" 
                             Background="#000000"
                             Foreground="#00FF00"
                             BorderBrush="#00FF00"
                             BorderThickness="2"
                             FontFamily="Consolas"
                             FontSize="13"
                             Padding="10,8"
                             SelectionChanged="VenueComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- Venue Name Display -->
                <TextBlock x:Name="VenueNameText"
                          Grid.Column="1" 
                          Text="Select a venue to view schedule" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#00FF00" 
                          FontFamily="Consolas" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Week Navigation -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="? PREV WEEK" 
                            x:Name="PrevWeekButton"
                            Click="PrevWeek_Click"
                            Background="#7D7D7D"
                            Foreground="#000000"
                            FontFamily="Consolas"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"/>
                    <Button Content="THIS WEEK" 
                            x:Name="ThisWeekButton"
                            Click="ThisWeek_Click"
                            Background="#00FF00"
                            Foreground="#000000"
                            FontFamily="Consolas"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="NEXT WEEK ?" 
                            x:Name="NextWeekButton"
                            Click="NextWeek_Click"
                            Background="#7D7D7D"
                            Foreground="#000000"
                            FontFamily="Consolas"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Calendar Grid -->
        <Border Grid.Row="1" 
                Background="Black" 
                BorderBrush="#00FF00" 
                BorderThickness="2" 
                Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid x:Name="CalendarGrid" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Day headers -->
                        <RowDefinition Height="*"/>    <!-- Time slots -->
                    </Grid.RowDefinitions>

                    <!-- Day of Week Headers -->
                    <Grid Grid.Row="0" x:Name="DayHeadersGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>  <!-- Time column -->
                            <ColumnDefinition Width="*"/>   <!-- Mon -->
                            <ColumnDefinition Width="*"/>   <!-- Tue -->
                            <ColumnDefinition Width="*"/>   <!-- Wed -->
                            <ColumnDefinition Width="*"/>   <!-- Thu -->
                            <ColumnDefinition Width="*"/>   <!-- Fri -->
                            <ColumnDefinition Width="*"/>   <!-- Sat -->
                            <ColumnDefinition Width="*"/>   <!-- Sun -->
                        </Grid.ColumnDefinitions>

                        <!-- Empty corner -->
                        <Border Grid.Column="0" 
                                Background="#0A0A0A" 
                                BorderBrush="#00FF00" 
                                BorderThickness="1"
                                Padding="5"/>

                        <!-- Day Headers -->
                        <Border Grid.Column="1" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="MondayHeader" Text="Mon" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="2" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="TuesdayHeader" Text="Tue" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="3" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="WednesdayHeader" Text="Wed" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="4" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="ThursdayHeader" Text="Thu" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="5" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="FridayHeader" Text="Fri" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="6" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="SaturdayHeader" Text="Sat" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="7" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="1" Padding="10,15">
                            <TextBlock x:Name="SundayHeader" Text="Sun" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Time Slots Grid (dynamically populated) -->
                    <ItemsControl Grid.Row="1" x:Name="TimeSlotsContainer" Margin="0,0,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid x:Name="TimeSlotsGrid"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
