<Window x:Class="DJBookingSystem.Views.CreateBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book a Slot" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#000000"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="#00FF00" BorderThickness="3" Background="#000000">
        <Border.Effect>
            <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,0,0,2" 
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="BOOK A SLOT" 
                              FontFamily="Consolas" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#00FF00" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button Content="X" 
                           Click="Close_Click"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Width="40"
                           Height="30"
                           Background="Transparent"
                           Foreground="#FF0000"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Margin="0,0,5,0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,20">
                    
                    <!-- Select Venue -->
                    <TextBlock Text="Select Venue *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="VenueComboBox" 
                             Background="#000000" 
                             Foreground="#00FF00" 
                             BorderBrush="#00FF00" 
                             BorderThickness="2" 
                             Padding="10" 
                             FontFamily="Consolas"
                             FontSize="12"
                             SelectionChanged="VenueComboBox_SelectionChanged"
                             Margin="0,0,0,15"/>

                    <!-- Select Date -->
                    <TextBlock Text="Select Date *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <DatePicker x:Name="BookingDatePicker" 
                               Background="#000000" 
                               Foreground="#00FF00" 
                               BorderBrush="#00FF00" 
                               BorderThickness="2" 
                               Padding="10" 
                               FontFamily="Consolas"
                               FontSize="12"
                               SelectedDateChanged="BookingDatePicker_SelectedDateChanged"
                               Margin="0,0,0,15"/>

                    <!-- Available Time Slots -->
                    <TextBlock Text="Available Time Slots *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <Border Background="#0A0A0A" 
                           BorderBrush="#00FF00" 
                           BorderThickness="2"
                           Padding="10"
                           Margin="0,0,0,15">
                        <ListBox x:Name="TimeSlotsListBox"
                                Background="#000000"
                                Foreground="#00FF00"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="11"
                                Height="120"
                                SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Padding="5"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Streaming Link -->
                    <TextBlock Text="Your Streaming Link *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="StreamingLinkTextBox" 
                            Background="#000000" 
                            Foreground="#00FF00" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2" 
                            Padding="10" 
                            FontFamily="Consolas"
                            FontSize="12"
                            Margin="0,0,0,10"/>

                    <TextBlock Text="Note: Only the venue owner will see your streaming link" 
                              Foreground="#888888" 
                              FontFamily="Consolas"
                              FontStyle="Italic"
                              FontSize="10"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>

                    <!-- Status Message -->
                    <TextBlock x:Name="StatusText"
                              Text=""
                              Foreground="#FF0000"
                              FontFamily="Consolas"
                              FontSize="11"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,2,0,0" 
                   Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="BOOK SLOT" 
                           Click="BookSlot_Click"
                           Background="#00FF00"
                           Foreground="#000000"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="CANCEL" 
                           Click="Close_Click"
                           Background="#FF0000"
                           Foreground="#000000"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF0000" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
