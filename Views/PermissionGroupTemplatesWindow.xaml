<Window x:Class="DJBookingSystem.Views.PermissionGroupTemplatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Permission Groups" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border BorderBrush="#00FF00" BorderThickness="2" Background="#000000">
        <Grid Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="0,0,0,1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="28">
                    <TextBlock Text="?? Permission Groups" 
                              FontFamily="Consolas" 
                              FontSize="10" 
                              Foreground="#00FF00" 
                              Margin="8,0" 
                              VerticalAlignment="Center"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="?" 
                               Click="Close_Click" 
                               Background="Transparent"
                               Foreground="#00FF00"
                               FontFamily="Consolas"
                               FontSize="11"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Padding="10,6"
                               Cursor="Hand"
                               ToolTip="Close"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Background="Black" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Header -->
                        <TextBlock Text="Permission Groups" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#00FF00" 
                                  FontFamily="Consolas"
                                  Margin="0,0,0,20"/>

                        <!-- Description -->
                        <TextBlock Text="Create and manage permission templates:" 
                                  FontSize="14" 
                                  Foreground="#00FF00" 
                                  FontFamily="Consolas"
                                  Margin="0,0,0,10"/>

                        <!-- Group List -->
                        <StackPanel Margin="20,0,0,20">
                            <TextBlock Text="> Standard User Group" 
                                      FontSize="14" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas"
                                      Margin="0,3"/>
                            <TextBlock Text="> DJ Group" 
                                      FontSize="14" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas"
                                      Margin="0,3"/>
                            <TextBlock Text="> Venue Owner Group" 
                                      FontSize="14" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas"
                                      Margin="0,3"/>
                            <TextBlock Text="> Moderator Group" 
                                      FontSize="14" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas"
                                      Margin="0,3"/>
                            <TextBlock Text="> Admin Group" 
                                      FontSize="14" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas"
                                      Margin="0,3"/>
                        </StackPanel>

                        <!-- Feature Coming Soon -->
                        <TextBlock Text="Feature coming soon!" 
                                  FontSize="14" 
                                  FontWeight="Bold"
                                  Foreground="#FF1493" 
                                  FontFamily="Consolas"
                                  Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="2" 
                   Background="#0A0A0A" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,1,0,0" 
                   Padding="10,5">
                <TextBlock Text="Permission group templates will allow quick permission assignment" 
                          Foreground="#888888" 
                          FontFamily="Consolas" 
                          FontSize="10"/>
            </Border>
        </Grid>
    </Border>
</Window>
