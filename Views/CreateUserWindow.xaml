<Window x:Class="DJBookingSystem.Views.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New User" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#000000"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- CheckBox Style with Black Theme -->
        <Style x:Key="BlackCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Custom Checkbox -->
                            <Border x:Name="CheckBoxBorder"
                                   Grid.Column="0"
                                   Width="20"
                                   Height="20"
                                   Background="#000000"
                                   BorderBrush="#00FF00"
                                   BorderThickness="2"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0">
                                <TextBlock x:Name="CheckMark"
                                          Text="?"
                                          Foreground="#00FF00"
                                          FontSize="14"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>
                            </Border>
                            
                            <!-- Content -->
                            <ContentPresenter Grid.Column="1"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#003300"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00FF00"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#001100"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#00FF00" BorderThickness="3" Background="#000000">
        <Border.Effect>
            <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,0,0,2" 
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="CREATE NEW USER" 
                              FontFamily="Consolas" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#00FF00" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button Content="X" 
                           Click="Close_Click"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Width="40"
                           Height="30"
                           Background="Transparent"
                           Foreground="#FF0000"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Margin="0,0,5,0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,20">
                    
                    <!-- Username -->
                    <TextBlock Text="Username *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                            Background="#000000" 
                            Foreground="#00FF00" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2" 
                            Padding="10" 
                            FontFamily="Consolas"
                            FontSize="12"
                            Margin="0,0,0,20"/>

                    <!-- Password -->
                    <TextBlock Text="Password *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                Background="#000000" 
                                Foreground="#00FF00" 
                                BorderBrush="#00FF00" 
                                BorderThickness="2" 
                                Padding="10" 
                                FontFamily="Consolas"
                                FontSize="12"
                                Margin="0,0,0,20"/>

                    <!-- Confirm Password -->
                    <TextBlock Text="Confirm Password *:" 
                              Foreground="#00FF00" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                Background="#000000" 
                                Foreground="#00FF00" 
                                BorderBrush="#00FF00" 
                                BorderThickness="2" 
                                Padding="10" 
                                FontFamily="Consolas"
                                FontSize="12"
                                Margin="0,0,0,20"/>

                    <!-- User Roles Section -->
                    <Border BorderBrush="#00FF00" 
                           BorderThickness="2" 
                           Background="#000000" 
                           Padding="15"
                           Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="User Roles * (Select at least one):" 
                                      Foreground="#00FF00" 
                                      FontFamily="Consolas" 
                                      FontWeight="Bold" 
                                      FontSize="12"
                                      Margin="0,0,0,10"/>

                            <!-- User Role -->
                            <CheckBox x:Name="UserRoleCheckBox" 
                                     Content="User - Basic access"
                                     Style="{StaticResource BlackCheckBoxStyle}"
                                     IsChecked="True"/>

                            <!-- DJ Role -->
                            <CheckBox x:Name="DJRoleCheckBox" 
                                     Content="DJ - Booking access"
                                     Style="{StaticResource BlackCheckBoxStyle}"/>

                            <!-- VenueOwner Role -->
                            <CheckBox x:Name="VenueOwnerRoleCheckBox" 
                                     Content="VenueOwner - Venue management"
                                     Style="{StaticResource BlackCheckBoxStyle}"/>

                            <!-- Manager Role (SysAdmin only) -->
                            <CheckBox x:Name="ManagerRoleCheckBox" 
                                     Content="Manager - Admin functions (SysAdmin only)"
                                     Style="{StaticResource BlackCheckBoxStyle}"
                                     Checked="AdminRole_Checked"/>

                            <!-- SysAdmin Role (SysAdmin only) -->
                            <CheckBox x:Name="SysAdminRoleCheckBox" 
                                     Content="SysAdmin - Full access (SysAdmin only)"
                                     Style="{StaticResource BlackCheckBoxStyle}"
                                     Checked="AdminRole_Checked"/>

                            <TextBlock x:Name="RoleDescriptionText"
                                      Text="Tip: Select multiple roles to combine permissions"
                                      Foreground="#888888"
                                      FontFamily="Consolas"
                                      FontSize="10"
                                      TextWrapping="Wrap"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Status Message -->
                    <TextBlock x:Name="StatusText"
                              Text=""
                              Foreground="#FF0000"
                              FontFamily="Consolas"
                              FontSize="11"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,2,0,0" 
                   Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="CREATE USER" 
                           Click="CreateUser_Click"
                           Background="#00FF00"
                           Foreground="#000000"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="CANCEL" 
                           Click="Close_Click"
                           Background="#FF0000"
                           Foreground="#000000"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF0000" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
