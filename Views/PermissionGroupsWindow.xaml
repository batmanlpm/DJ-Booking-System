<Window x:Class="DJBookingSystem.Views.PermissionGroupsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Permission Groups" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#000000"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="#00FF00" BorderThickness="3" Background="#000000">
        <Border.Effect>
            <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,0,0,2" 
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="?? PERMISSION GROUPS" 
                              FontFamily="Consolas" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#00FF00" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button Content="?" 
                           Click="Close_Click"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Width="40"
                           Height="30"
                           Background="Transparent"
                           Foreground="#FF0000"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Margin="0,0,5,0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Group List -->
                <Border Grid.Column="0" 
                       Background="#0A0A0A" 
                       BorderBrush="#00FF00" 
                       BorderThickness="2" 
                       Padding="10"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="PERMISSION GROUPS" 
                                  FontFamily="Consolas" 
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#FF1493"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Create and manage permission templates:" 
                                  FontFamily="Consolas" 
                                  FontSize="10"
                                  Foreground="#00FF00"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>

                        <!-- Group Buttons -->
                        <Button Content="- Standard User Group" 
                               Click="StandardUserGroup_Click"
                               Style="{StaticResource SpaceButton}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,5"/>

                        <Button Content="- DJ Group" 
                               Click="DJGroup_Click"
                               Style="{StaticResource SpaceButton}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,5"/>

                        <Button Content="- Venue Owner Group" 
                               Click="VenueOwnerGroup_Click"
                               Style="{StaticResource SpaceButton}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,5"/>

                        <Button Content="- Moderator Group" 
                               Click="ModeratorGroup_Click"
                               Style="{StaticResource SpaceButton}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,5"/>

                        <Button Content="- Admin Group" 
                               Click="AdminGroup_Click"
                               Style="{StaticResource SpaceButton}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,15"/>

                        <TextBlock Text="Feature coming soon!" 
                                  FontFamily="Consolas" 
                                  FontSize="11"
                                  FontStyle="Italic"
                                  Foreground="#FFD700"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Right: Group Details -->
                <Border Grid.Column="1" 
                       Background="#0A0A0A" 
                       BorderBrush="#00FF00" 
                       BorderThickness="2" 
                       Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DetailsPanel">
                            <TextBlock Text="SELECT A GROUP" 
                                      FontFamily="Consolas" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#00FF00"
                                      Margin="0,0,0,10"/>

                            <TextBlock x:Name="GroupDescriptionText"
                                      Text="Select a permission group from the left to view and manage its permissions."
                                      FontFamily="Consolas" 
                                      FontSize="11"
                                      Foreground="#00FF00"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,20"/>

                            <!-- Permissions Grid (Hidden by default) -->
                            <Grid x:Name="PermissionsGrid" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Booking Permissions -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="BOOKING PERMISSIONS" 
                                              FontFamily="Consolas" 
                                              FontWeight="Bold"
                                              Foreground="#FF1493"
                                              Margin="0,0,0,5"/>
                                    <CheckBox Content="Can View Bookings" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Create Bookings" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Edit Bookings" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Delete Bookings" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                </StackPanel>

                                <!-- Venue Permissions -->
                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="VENUE PERMISSIONS" 
                                              FontFamily="Consolas" 
                                              FontWeight="Bold"
                                              Foreground="#FF1493"
                                              Margin="0,0,0,5"/>
                                    <CheckBox Content="Can View Venues" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Register Venues" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Edit Venues" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Delete Venues" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                </StackPanel>

                                <!-- Admin Permissions -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                                    <TextBlock Text="ADMIN PERMISSIONS" 
                                              FontFamily="Consolas" 
                                              FontWeight="Bold"
                                              Foreground="#FF1493"
                                              Margin="0,0,0,5"/>
                                    <CheckBox Content="Can Manage Users" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Customize App" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Access Settings" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                </StackPanel>

                                <!-- Moderation Permissions -->
                                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                                    <TextBlock Text="MODERATION PERMISSIONS" 
                                              FontFamily="Consolas" 
                                              FontWeight="Bold"
                                              Foreground="#FF1493"
                                              Margin="0,0,0,5"/>
                                    <CheckBox Content="Can Ban Users" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Mute Users" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can View Reports" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                </StackPanel>

                                <!-- RadioBOSS Permissions -->
                                <StackPanel Grid.Row="4" Margin="0,0,0,15">
                                    <TextBlock Text="RADIOBOSS PERMISSIONS" 
                                              FontFamily="Consolas" 
                                              FontWeight="Bold"
                                              Foreground="#FF1493"
                                              Margin="0,0,0,5"/>
                                    <CheckBox Content="Can View RadioBoss" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                    <CheckBox Content="Can Control RadioBoss" 
                                             Foreground="#00FF00" 
                                             FontFamily="Consolas"
                                             Margin="0,0,0,3"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                   Background="#000000" 
                   BorderBrush="#00FF00" 
                   BorderThickness="0,2,0,0" 
                   Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="SAVE GROUP" 
                           Click="SaveGroup_Click"
                           Background="#00FF00"
                           Foreground="#000000"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="CANCEL" 
                           Click="Close_Click"
                           Background="#FF0000"
                           Foreground="#FFFFFF"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="12"
                           Padding="30,10"
                           Margin="10,0"
                           Cursor="Hand"
                           BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF0000" BlurRadius="15" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
