<Window x:Class="DJBookingSystem.Views.UsersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DJBookingSystem.Views"
        Title="User Management" 
        Height="800" 
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    
    <Border Background="Black" 
            BorderBrush="#00FF00" 
            BorderThickness="2" 
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#0A0A0A" 
                    BorderBrush="#00FF00" 
                    BorderThickness="0,0,0,2"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="15,0,0,0">
                        <TextBlock Text="?? USER MANAGEMENT" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#00FF00" 
                                  FontFamily="Consolas"
                                  VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,0,5,0">
                        
                        <!-- Minimize Button -->
                        <Button Content="?" 
                                Click="Minimize_Click"
                                Width="40" 
                                Height="30"
                                Background="Transparent"
                                Foreground="#00FF00"
                                BorderThickness="0"
                                FontSize="20"
                                FontWeight="Bold"
                                Cursor="Hand"
                                ToolTip="Minimize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00FF00"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Maximize/Restore Button -->
                        <Button x:Name="MaximizeButton"
                                Content="?" 
                                Click="MaximizeRestore_Click"
                                Width="40" 
                                Height="30"
                                Background="Transparent"
                                Foreground="#00FF00"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                ToolTip="Maximize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00FF00"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Close Button -->
                        <Button Content="?" 
                                Click="Close_Click"
                                Width="40" 
                                Height="30"
                                Background="Transparent"
                                Foreground="#FF1493"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                ToolTip="Close"
                                Margin="5,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1493"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content - Embedded UsersView -->
            <views:UsersView x:Name="UsersViewControl" 
                            Grid.Row="1"
                            Margin="5"/>
        </Grid>
    </Border>
</Window>
