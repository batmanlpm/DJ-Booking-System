<UserControl x:Class="DJBookingSystem.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1160">
    <UserControl.Resources>
        <Style x:Key="SpaceButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00FF00"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#009900"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <UserControl.Background>
        <ImageBrush ImageSource="../New-BG.png" Stretch="UniformToFill" Opacity="0.6"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Discord Connection Panel -->
        <Border Grid.Row="0" Background="#0A0A0A" BorderBrush="#5865F2" BorderThickness="2" Margin="10,10,10,5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Discord Logo/Icon -->
                <Border Grid.Column="0" Background="#5865F2" CornerRadius="5" Padding="8" Margin="0,0,15,0">
                    <TextBlock Text="D" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                </Border>

                <!-- Status Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="DISCORD INTEGRATION" 
                              FontFamily="Consolas" 
                              FontWeight="Bold" 
                              FontSize="14" 
                              Foreground="#5865F2"/>
                    <TextBlock x:Name="DiscordStatusText" 
                              Text="Loading..." 
                              FontFamily="Consolas" 
                              FontSize="11" 
                              Foreground="#888888"
                              Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Webhook Label -->
                <TextBlock Grid.Column="2" 
                          Text="Webhook:" 
                          FontFamily="Consolas" 
                          FontSize="12" 
                          Foreground="#00FF00" 
                          VerticalAlignment="Center"
                          Margin="15,0,10,0"/>

                <!-- Webhook TextBox -->
                <TextBox x:Name="WebhookTextBox" 
                        Grid.Column="3" 
                        Background="#1A1A1A" 
                        Foreground="#00FF00" 
                        BorderBrush="#5865F2"
                        BorderThickness="1"
                        Padding="8,5"
                        FontFamily="Consolas"
                        FontSize="11"
                        VerticalAlignment="Center"
                        ToolTip="Enter Discord webhook URL for CandyBot notifications"/>

                <!-- Submit Webhook Button -->
                <Button x:Name="SubmitWebhookButton" 
                       Grid.Column="4" 
                       Content="SUBMIT" 
                       Style="{StaticResource SpaceButton}"
                       Click="SubmitWebhook_Click"
                       Margin="10,0,10,0"
                       Padding="15,8"
                       ToolTip="Save Discord webhook for notifications"/>

                <!-- Zoom Out Button -->
                <Button x:Name="ZoomOutButton" 
                       Grid.Column="5" 
                       Content="-" 
                       Style="{StaticResource SpaceButton}"
                       Click="ZoomOut_Click"
                       Margin="0,0,5,0"
                       Padding="12,8"
                       ToolTip="Zoom Out (Ctrl + -)"/>

                <!-- Zoom In Button -->
                <Button x:Name="ZoomInButton" 
                       Grid.Column="6" 
                       Content="+" 
                       Style="{StaticResource SpaceButton}"
                       Click="ZoomIn_Click"
                       Margin="0,0,5,0"
                       Padding="12,8"
                       ToolTip="Zoom In (Ctrl + +)"/>

                <!-- Reset Zoom Button -->
                <Button x:Name="ResetZoomButton" 
                       Grid.Column="7" 
                       Content="100%" 
                       Style="{StaticResource SpaceButton}"
                       Click="ResetZoom_Click"
                       Margin="0,0,10,0"
                       Padding="10,8"
                       ToolTip="Reset Zoom (Ctrl + 0)"/>

                <!-- Refresh Button -->
                <Button x:Name="RefreshDiscordButton" 
                       Grid.Column="8" 
                       Content="REFRESH" 
                       Style="{StaticResource SpaceButton}"
                       Click="RefreshDiscord_Click"
                       Margin="0,0,10,0"
                       Padding="15,8"/>

                <!-- Home Button -->
                <Button x:Name="HomeDiscordButton" 
                       Grid.Column="9" 
                       Content="HOME" 
                       Style="{StaticResource SpaceButton}"
                       Click="HomeDiscord_Click"
                       Margin="0,0,10,0"
                       Padding="15,8"/>

                <!-- Logout Button -->
                <Button x:Name="LogoutDiscordButton" 
                       Grid.Column="10" 
                       Content="LOGOUT" 
                       Style="{StaticResource SpaceButton}"
                       Click="LogoutDiscord_Click"
                       Padding="15,8"/>
            </Grid>
        </Border>

        <!-- Discord WebView2 -->
        <Border Grid.Row="1" Background="#0A0A0A" BorderBrush="#5865F2" BorderThickness="2" Margin="10,5,10,10">
            <Grid>
                <!-- Loading Indicator -->
                <Border x:Name="LoadingPanel" 
                       Background="#0A0A0A" 
                       Visibility="Visible"
                       Panel.ZIndex="1">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="?" 
                                  FontSize="48" 
                                  Foreground="#5865F2" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation" CenterX="24" CenterY="24"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Loading Discord..." 
                                  FontFamily="Consolas" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#5865F2" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LoadingUserText"
                                  FontFamily="Consolas" 
                                  FontSize="12" 
                                  Foreground="#888888" 
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- WebView2 Control -->
                <wv2:WebView2 x:Name="DiscordWebView" 
                             Visibility="Collapsed"
                             NavigationCompleted="DiscordWebView_NavigationCompleted"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
