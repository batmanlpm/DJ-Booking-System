<Window x:Class="DJBookingSystem.RadioBossBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadioBOSS Cloud Control" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="RadioBOSS Cloud Control Panel"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <TextBlock Text="(Role-based access)"
                          FontSize="12"
                          Margin="20,0,0,0"
                          VerticalAlignment="Center"
                          Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Standard WebBrowser - Replaced WebView2 -->
        <WebBrowser x:Name="RadioBossWebView"
                    Grid.Row="1"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock x:Name="FooterTextBlock"
                      Text="RadioBOSS Cloud - Access level determined by user role"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
