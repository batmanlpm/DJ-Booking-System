<Window x:Class="DJBookingSystem.AccountSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Settings" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Account Settings"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      Margin="0,0,0,5"/>
            <TextBlock Text="Manage your account preferences and personal data"
                      FontSize="12"
                      Foreground="#7F8C8D"/>
        </StackPanel>

        <!-- Account Info -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Account Information Section -->
                <Border Background="White" Padding="15" Margin="0,0,0,15" BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Account Information"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="UsernameTextBlock" Text="" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Account Type:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AccountTypeTextBlock" Text="" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Role:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RoleTextBlock" Text="" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Member Since:" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="MemberSinceTextBlock" Text="" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Danger Zone -->
                <Border Background="#FFEBEE" Padding="15" BorderBrush="#E74C3C" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Danger Zone"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#C0392B"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Delete Account"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,5"/>

                        <TextBlock TextWrapping="Wrap"
                                  Foreground="#7F8C8D"
                                  Margin="0,0,0,15">
                            <Run Text="Once you delete your account, there is no going back. "/>
                            <Run Text="This action will permanently delete your account and remove all personal data from our servers. "/>
                            <Run Text="Your bookings will remain for historical records but will be anonymized." FontWeight="Bold"/>
                        </TextBlock>

                        <TextBlock x:Name="BanWarningTextBlock"
                                  Text="âš ï¸ Account deletion is not available while your account is banned."
                                  Foreground="#C0392B"
                                  FontWeight="Bold"
                                  Visibility="Collapsed"
                                  Margin="0,0,0,10"/>

                        <Button x:Name="DeleteAccountButton"
                               Content="ðŸ—‘ï¸ Delete My Account"
                               Click="DeleteAccount_Click"
                               Padding="15,10"
                               Background="#E74C3C"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand"
                               FontSize="13"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="Close"
               Click="Close_Click"
               Padding="20,10"
               Margin="0,15,0,0"
               Background="#95A5A6"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               HorizontalAlignment="Right"/>
    </Grid>
</Window>
