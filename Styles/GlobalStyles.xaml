<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Global Window Style -->
    <Style x:Key="FuturisticWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>
    
    <!-- Main Window Border Style with Glow -->
    <Style x:Key="MainBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Content Panel Border Style -->
    <Style x:Key="ContentPanelBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#0A0A0A"/>
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- Section Border Style -->
    <Style x:Key="SectionBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#0A0A0A"/>
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- Title Bar Border Style -->
    <Style x:Key="TitleBarBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#0A0A0A"/>
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
    </Style>
    
    <!-- Horizontal Menu Bar Border Style -->
    <Style x:Key="MenuBarBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#0A0A0A"/>
        <Setter Property="BorderBrush" Value="#00FF00"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
    </Style>

</ResourceDictionary>
