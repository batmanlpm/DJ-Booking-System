<Window x:Class="DJBookingSystem.ChatModeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Chat Mode"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="#0A0A0A" BorderBrush="#00FF00" BorderThickness="3">
        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1a1a2e" Padding="30" Margin="0,0,0,50">
                <StackPanel>
                    <TextBlock Text="CHAT MODE SELECTION" FontSize="48" FontWeight="Bold" Foreground="#00FF00" FontFamily="Consolas" HorizontalAlignment="Center"/>
                    <TextBlock Text="Choose your preferred chat method" FontSize="20" Foreground="#888888" FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Chat Mode Options -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Integrated Chat Option -->
                <Border Grid.Column="0" Background="#1a1a2e" BorderBrush="#00FF00" BorderThickness="4" CornerRadius="10" Cursor="Hand" MouseEnter="IntegratedChat_MouseEnter" MouseLeave="ChatOption_MouseLeave" MouseLeftButtonDown="IntegratedChat_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#00FF00" CornerRadius="80" Width="160" Height="160" Margin="0,50,0,30" HorizontalAlignment="Center">
                            <TextBlock Text="!" FontSize="96" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="30,0">
                            <TextBlock Text="INTEGRATED CHAT" FontSize="32" FontWeight="Bold" Foreground="#00FF00" FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                            <TextBlock Text="- Ticket-based support system" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" TextWrapping="Wrap" Margin="0,8"/>
                            <TextBlock Text="- Community user chat" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                            <TextBlock Text="- Direct admin assistance" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                            <TextBlock Text="- Team announcements" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                        </StackPanel>

                        <Border Grid.Row="2" Background="#00AA00" Padding="15,10" Margin="30,30,30,30">
                            <TextBlock Text="AVAILABLE NOW" FontSize="18" FontWeight="Bold" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Discord Option -->
                <Border Grid.Column="2" x:Name="DiscordOptionBorder" Background="#1a1a2e" BorderBrush="#5865F2" BorderThickness="4" CornerRadius="10" Cursor="Hand" MouseEnter="Discord_MouseEnter" MouseLeave="ChatOption_MouseLeave" MouseLeftButtonDown="Discord_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#5865F2" CornerRadius="80" Width="160" Height="160" Margin="0,50,0,30" HorizontalAlignment="Center">
                            <TextBlock Text="D" FontSize="96" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="30,0">
                            <TextBlock Text="DISCORD CHAT" FontSize="32" FontWeight="Bold" Foreground="#5865F2" FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                            <TextBlock Text="- Full Discord experience" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" TextWrapping="Wrap" Margin="0,8"/>
                            <TextBlock Text="- Voice and video calls" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                            <TextBlock Text="- Server and DM support" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                            <TextBlock Text="- Auto-login from desktop" FontSize="18" Foreground="#CCCCCC" FontFamily="Consolas" Margin="0,8"/>
                        </StackPanel>

                        <Border Grid.Row="2" Background="#5865F2" Padding="15,10" Margin="30,30,30,30">
                            <TextBlock Text="AVAILABLE NOW" FontSize="18" FontWeight="Bold" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button Content="CANCEL" Click="Cancel_Click" Background="Transparent" Foreground="#888888" BorderBrush="#888888" BorderThickness="3" FontFamily="Consolas" FontWeight="Bold" FontSize="20" Padding="40,15" Margin="0,0,20,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#888888"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
