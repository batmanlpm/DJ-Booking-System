<Window x:Class="DJBookingSystem.VenueRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Your Room/Venue" 
        Height="750" 
        Width="750"
        MinHeight="600"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Futuristic Button Style -->
        <Style x:Key="FuturisticButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00FF00"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00FF00" BlurRadius="25" ShadowDepth="0" Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource FuturisticButtonStyle}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#00FF00"/>
        </Style>
    </Window.Resources>
    
    <!-- Main Window Border with Glow -->
    <Border BorderBrush="#00FF00" BorderThickness="2" Background="#000000">
        <Border.Effect>
            <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="#0A0A0A" 
                    BorderBrush="#00FF00" 
                    BorderThickness="0,0,0,2"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="VENUE REGISTRATION" 
                              FontFamily="Consolas" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#00FF00" 
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    <Button Content="?" 
                           Click="Close_Click"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Background="Transparent"
                           Foreground="#00FF00"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Padding="15,0"
                           Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="Black" Margin="20">
                <StackPanel>
                    <!-- Header -->
                    <Border Background="#0A0A0A" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2" 
                            Padding="20" 
                            Margin="0,0,0,20"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Register Your Room/Venue for Free DJ Services"
                                      FontSize="22"
                                      FontWeight="Bold"
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="All DJ services are provided free of charge! DJ slots are 1 hour long."
                                      FontSize="13"
                                      FontStyle="Italic"
                                      Foreground="#27AE60"
                                      FontFamily="Consolas"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Room/Venue Information -->
                    <Border Background="#0A0A0A" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2" 
                            Padding="20" 
                            Margin="0,0,0,15"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="ROOM/VENUE INFORMATION" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Room Name:*" 
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      FontSize="12"
                                      Margin="0,5,0,5"/>
                            <TextBox x:Name="RoomNameTextBox" 
                                    Padding="10"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    Background="#000000"
                                    Foreground="#00FF00"
                                    BorderBrush="#00FF00"
                                    BorderThickness="2"
                                    CaretBrush="#00FF00"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Example: The Blue Room, Main Hall, Studio A"
                                      FontSize="10"
                                      FontStyle="Italic"
                                      Foreground="#666666"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Room Description:*" 
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      FontSize="12"
                                      Margin="0,5,0,5"/>
                            <TextBox x:Name="RoomDescriptionTextBox"
                                    Padding="10"
                                    Height="100"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontFamily="Consolas"
                                    FontSize="13"
                                    Background="#000000"
                                    Foreground="#00FF00"
                                    BorderBrush="#00FF00"
                                    BorderThickness="2"
                                    CaretBrush="#00FF00"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Describe your room/venue (capacity, equipment, atmosphere, etc.)"
                                      FontSize="10"
                                      FontStyle="Italic"
                                      Foreground="#666666"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Discord Webhook URL: (Optional)" 
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      FontSize="12"
                                      Margin="0,5,0,5"/>
                            <TextBox x:Name="DiscordWebhookTextBox" 
                                    Padding="10"
                                    FontFamily="Consolas"
                                    FontSize="13"
                                    Background="#000000"
                                    Foreground="#00FF00"
                                    BorderBrush="#00FF00"
                                    BorderThickness="2"
                                    CaretBrush="#00FF00"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Enter a Discord webhook URL to receive booking notifications in your channel"
                                      FontSize="10"
                                      FontStyle="Italic"
                                      Foreground="#666666"
                                      FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>

                    <!-- Opening Days Schedule -->
                    <Border Background="#0A0A0A" 
                            BorderBrush="#00FF00" 
                            BorderThickness="2" 
                            Padding="20" 
                            Margin="0,0,0,15"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="OPENING DAYS SCHEDULE"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#00FF00"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,10"/>

                            <TextBlock Text="Select which days your venue is open for DJ bookings:"
                                      FontSize="12"
                                      Foreground="#888888"
                                      FontFamily="Consolas"
                                      Margin="0,0,0,15"
                                      TextWrapping="Wrap"/>

                            <!-- Checkboxes -->
                            <CheckBox x:Name="MondayCheckBox"
                                     Content="Monday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="TuesdayCheckBox"
                                     Content="Tuesday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="WednesdayCheckBox"
                                     Content="Wednesday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="ThursdayCheckBox"
                                     Content="Thursday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="FridayCheckBox"
                                     Content="Friday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="SaturdayCheckBox"
                                     Content="Saturday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                            <CheckBox x:Name="SundayCheckBox"
                                     Content="Sunday"
                                     Foreground="#00FF00"
                                     FontWeight="Bold"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                    Background="#0A0A0A" 
                    BorderBrush="#00FF00" 
                    BorderThickness="0,2,0,0"
                    Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="REGISTER VENUE"
                           Click="RegisterVenue_Click"
                           Style="{StaticResource FuturisticButtonStyle}"
                           Margin="0,0,15,0"
                           Width="200"/>
                    <Button Content="CANCEL"
                           Click="Close_Click"
                           Style="{StaticResource CancelButtonStyle}"
                           Width="150"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
