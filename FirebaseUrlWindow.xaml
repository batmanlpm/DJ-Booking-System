<Window x:Class="DJBookingSystem.FirebaseUrlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firebase Configuration" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="CanResize"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="Firebase Database Configuration"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Padding="30" Background="White" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Firebase Database URL:"
                          FontSize="14"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="FirebaseUrlTextBox"
                        Padding="10"
                        FontSize="14"
                        Text="https://your-project.firebaseio.com/"
                        Margin="0,0,0,20"/>

                <Button Content="Connect"
                       Click="Connect_Click"
                       Padding="15"
                       FontSize="16"
                       FontWeight="Bold"
                       Background="#3498DB"
                       Foreground="White"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
