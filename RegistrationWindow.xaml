<Window x:Class="DJBookingSystem.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DJBookingSystem.Controls"
        Title="Register New Account" Height="700" Width="900" MaxWidth="900" MaxHeight="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="Black">
    <Window.Resources>
        <!-- TextBox Style with Visible Text -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#00FF00"/>
        </Style>
        
        <!-- PasswordBox Style with Visible Text -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#00FF00"/>
        </Style>
        
        <!-- TextBlock Labels Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid Background="Black" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Title and Stay On Top -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <controls:FancyHeading Text="Registration" HorizontalAlignment="Center" Margin="0,0,20,0"/>
            <CheckBox x:Name="StayOnTopCheckBox"
                      Content="Stay On Top"
                      Margin="20,0,0,0"
                      VerticalAlignment="Center"
                      Checked="StayOnTopCheckBox_Checked"
                      Unchecked="StayOnTopCheckBox_Unchecked"
                      Foreground="#00FF00"
                      Background="Black"/>
        </StackPanel>

        <!-- Header Banner -->
        <Border Grid.Row="1" Background="#2C3E50" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Create Your Account"
                          FontSize="26"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Account Type Selection -->
                <Border Background="Black" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="I am registering as:"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>

                        <CheckBox x:Name="IsDJCheckBox"
                                 Content="DJ (I want to book gigs)"
                                 Foreground="White"
                                 FontSize="14"
                                 Margin="0,5"
                                 Checked="AccountTypeChanged"
                                 Unchecked="AccountTypeChanged"/>

                        <CheckBox x:Name="IsVenueOwnerCheckBox"
                                 Content="Venue Owner (I want to offer my venue)"
                                 Foreground="White"
                                 FontSize="14"
                                 Margin="0,10,0,5"
                                 Checked="AccountTypeChanged"
                                 Unchecked="AccountTypeChanged"/>

                        <TextBlock Text="You can select both if applicable!"
                                  FontSize="11"
                                  Foreground="#FFE4CC"
                                  Margin="0,10,0,0"
                                  FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Basic Information -->
                <TextBlock Text="Username (DJ Name)*" Margin="0,5,0,2" FontWeight="Bold"/>
                <TextBox x:Name="UsernameTextBox" Padding="8" FontSize="14"/>

                <TextBlock Text="Password*" Margin="0,10,0,2" FontWeight="Bold"/>
                <TextBlock Text="(Minimum 6 characters)" Margin="0,0,0,2" FontSize="11" Foreground="#7F8C8D"/>
                <PasswordBox x:Name="PasswordBox" Padding="8" FontSize="14"/>

                <TextBlock Text="Confirm Password*" Margin="0,10,0,2" FontWeight="Bold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="8" FontSize="14"/>

                <!-- DJ-Specific Fields (conditionally visible) -->
                <StackPanel x:Name="DJFieldsPanel" Visibility="Collapsed">
                    <Border Background="#3498DB" Padding="10" Margin="0,20,0,15" CornerRadius="5">
                        <TextBlock Text="DJ Information"
                                  FontSize="15"
                                  FontWeight="Bold"
                                  Foreground="White"/>
                    </Border>

                    <TextBlock Text="Streaming Link URL*" Margin="0,5,0,2" FontWeight="Bold"/>
                    <TextBlock Text="Where people can listen to your DJ sets"
                              Margin="0,0,0,2"
                              FontSize="11"
                              Foreground="#7F8C8D"/>
                    <TextBox x:Name="StreamingLinkTextBox" Padding="8" FontSize="14"/>

                    <TextBlock Text="DJ Logo URL (Optional)" Margin="0,10,0,2" FontWeight="Bold"/>
                    <TextBlock Text="Recommended size: 640x480 pixels"
                              Margin="0,0,0,2"
                              FontSize="11"
                              Foreground="#7F8C8D"/>
                    <TextBox x:Name="DJLogoUrlTextBox" Padding="8" FontSize="14"/>

                    <!-- PostImages.org Helper -->
                    <Border Background="#F39C12" Padding="12" Margin="0,10,0,0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¸ Need to upload your logo?"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap"
                                      Foreground="White"
                                      FontSize="12"
                                      Margin="0,0,0,8">
                                1. Click the button below to open PostImages.org<LineBreak/>
                                2. Resize your image to 640x480 pixels before uploading<LineBreak/>
                                3. Upload your image<LineBreak/>
                                4. Copy the "Direct Link" (starts with https://i.postimg.cc/)<LineBreak/>
                                5. Paste it in the DJ Logo URL field above
                            </TextBlock>
                            <Button Content="Open PostImages.org Upload Page"
                                   Click="OpenPostImages_Click"
                                   Padding="12,8"
                                   Background="#E67E22"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Registration Notes -->
                <Border Background="#2C3E50" Padding="15" Margin="0,25,0,0" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Registration Notes"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap"
                                  Foreground="White"
                                  FontSize="12"
                                  LineHeight="18">
                            â€¢ Your account will be created instantly<LineBreak/>
                            â€¢ DJs can start booking immediately after registration<LineBreak/>
                            â€¢ Venue Owners can add venues after registration<LineBreak/>
                            â€¢ All fields marked with * are required
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Register"
                   Click="Register_Click"
                   Padding="30,12"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   BorderThickness="0"
                   Cursor="Hand"/>
            <Button Content="Back to Login"
                   Click="BackToLogin_Click"
                   Padding="30,12"
                   Margin="5"
                   Background="#95A5A6"
                   Foreground="White"
                   FontSize="16"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
