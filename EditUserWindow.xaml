<Window x:Class="DJBookingSystem.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DJBookingSystem.Controls"
        Title="Edit User" Height="700" Width="900" MaxWidth="900" MaxHeight="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="Black">
    <Grid Background="Black" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <controls:FancyHeading Text="Edit User" HorizontalAlignment="Center" Margin="0,0,20,0"/>
                    <CheckBox x:Name="StayOnTopCheckBox" Content="Stay On Top" Margin="20,0,0,0" VerticalAlignment="Center"
                              Checked="StayOnTopCheckBox_Checked" Unchecked="StayOnTopCheckBox_Unchecked"
                              Foreground="#00FF00" Background="Black"/>
                </StackPanel>

                <TextBlock x:Name="TitleTextBlock" Text="Edit User" FontSize="20" FontWeight="Bold"
                           Foreground="#00FF00" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username:*" Margin="0,5,0,2" Foreground="#00FF00"/>
                <TextBox x:Name="UsernameTextBox" Padding="5" BorderBrush="#00FF00" Background="Black" Foreground="White"/>

                <TextBlock Text="Name:*" Margin="0,10,0,2" Foreground="#00FF00"/>
                <TextBox x:Name="FullNameTextBox" Padding="5" BorderBrush="#00FF00" Background="Black" Foreground="White"/>

                <TextBlock x:Name="PasswordLabel" Text="Password:*" Margin="0,10,0,2" Foreground="#00FF00"/>
                <PasswordBox x:Name="PasswordBox" Padding="5" BorderBrush="#00FF00" Background="Black" Foreground="White"/>
                <TextBlock x:Name="PasswordHintTextBlock"
                          Text="Leave blank to keep current password"
                          FontSize="11"
                          FontStyle="Italic"
                          Foreground="Gray"
                          Margin="0,2,0,0"
                          Visibility="Collapsed"/>

                <TextBlock Text="Role:*" Margin="0,10,0,2" Foreground="#00FF00"/>
                <ComboBox x:Name="RoleComboBox" Padding="5" BorderBrush="#00FF00" Background="Black" Foreground="White">
                    <ComboBoxItem Content="SysAdmin" Tag="SysAdmin"/>
                    <ComboBoxItem Content="Manager" Tag="Manager"/>
                    <ComboBoxItem Content="User" Tag="User" IsSelected="True"/>
                </ComboBox>

                <CheckBox x:Name="IsActiveCheckBox"
                         Content="Account Active"
                         IsChecked="True"
                         Margin="0,15,0,0"
                         Foreground="#00FF00"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save"
                   Click="Save_Click"
                   Padding="20,10"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"/>
            <Button Content="Cancel"
                   Click="Cancel_Click"
                   Padding="20,10"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>