<Window x:Class="DJBookingSystem.RadioPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radio Player" Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1a1a1a"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸŽµ Radio Player"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="CurrentStationText"
                          Text="No station playing"
                          FontSize="12"
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- URL Input -->
        <Border Grid.Row="1" Background="#34495E" Padding="15" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Stream URL:"
                          VerticalAlignment="Center"
                          Foreground="White"
                          Margin="0,0,10,5"/>

                <TextBox Grid.Row="0" Grid.Column="1"
                        x:Name="StreamUrlTextBox"
                        Padding="8"
                        FontSize="13"
                        Margin="0,0,10,5"
                        Background="#2C3E50"
                        Foreground="White"
                        BorderBrush="#3498DB"/>

                <Button Grid.Row="0" Grid.Column="2"
                       Content="Load and Play"
                       Click="LoadStream_Click"
                       Padding="15,8"
                       Margin="0,0,0,5"
                       Background="#27AE60"
                       Foreground="White"
                       FontWeight="Bold"
                       Cursor="Hand"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Station Name:"
                          VerticalAlignment="Center"
                          Foreground="White"
                          Margin="0,0,10,0"/>

                <TextBox Grid.Row="1" Grid.Column="1"
                        x:Name="StationNameTextBox"
                        Padding="8"
                        FontSize="13"
                        Margin="0,0,10,0"
                        Background="#2C3E50"
                        Foreground="White"
                        BorderBrush="#3498DB"/>

                <Button Grid.Row="1" Grid.Column="2"
                       Content="Save Station"
                       Click="SaveStation_Click"
                       Padding="15,8"
                       Background="#3498DB"
                       Foreground="White"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Saved Stations List -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="10" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Saved Stations"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="5,0"/>
                    <Button Content="Refresh"
                           Click="RefreshStations_Click"
                           Padding="10,5"
                           Margin="10,0"
                           Background="#9B59B6"
                           Foreground="White"
                           Cursor="Hand"/>
                </StackPanel>

                <ListBox Grid.Row="1"
                        x:Name="StationsListBox"
                        Background="#34495E"
                        Foreground="White"
                        BorderBrush="#3498DB"
                        MouseDoubleClick="Station_DoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="2" Background="#2C3E50" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                  FontWeight="Bold"
                                                  FontSize="14"
                                                  Foreground="White"/>
                                        <TextBlock Text="{Binding StreamUrl}"
                                                  FontSize="11"
                                                  Foreground="#BDC3C7"
                                                  Margin="0,3,0,0"/>
                                        <TextBlock Foreground="#95A5A6" FontSize="10" Margin="0,3,0,0">
                                            <Run Text="Added:"/>
                                            <Run Text="{Binding AddedDate, StringFormat='MM/dd/yyyy'}"/>
                                            <Run Text=" by "/>
                                            <Run Text="{Binding AddedBy}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                           Content="Delete"
                                           Tag="{Binding Id}"
                                           Click="DeleteStation_Click"
                                           Padding="10,5"
                                           Background="#E74C3C"
                                           Foreground="White"
                                           Cursor="Hand"
                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Player Controls -->
        <Border Grid.Row="3" Background="#34495E" Padding="20">
            <StackPanel>
                <!-- Volume Control -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="ðŸ”Š Volume"
                              VerticalAlignment="Center"
                              Foreground="White"
                              Margin="0,0,15,0"
                              FontSize="14"/>

                    <Slider Grid.Column="1"
                           x:Name="VolumeSlider"
                           Minimum="0"
                           Maximum="100"
                           Value="50"
                           TickFrequency="10"
                           IsSnapToTickEnabled="True"
                           ValueChanged="VolumeSlider_ValueChanged"
                           VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                              x:Name="VolumeText"
                              Text="50%"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Width="40"
                              FontSize="14"/>
                </Grid>

                <!-- Playback Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PlayButton"
                           Content="â–¶ Play"
                           Click="Play_Click"
                           Padding="20,10"
                           Margin="5"
                           Background="#27AE60"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           MinWidth="100"
                           Cursor="Hand"/>

                    <Button x:Name="PauseButton"
                           Content="â¸ Pause"
                           Click="Pause_Click"
                           Padding="20,10"
                           Margin="5"
                           Background="#F39C12"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           MinWidth="100"
                           Cursor="Hand"
                           IsEnabled="False"/>

                    <Button x:Name="StopButton"
                           Content="â¹ Stop"
                           Click="Stop_Click"
                           Padding="20,10"
                           Margin="5"
                           Background="#E74C3C"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           MinWidth="100"
                           Cursor="Hand"
                           IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#2C3E50" Padding="10" BorderBrush="#34495E" BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText"
                      Text="Ready - Enter a stream URL to begin"
                      Foreground="#ECF0F1"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
