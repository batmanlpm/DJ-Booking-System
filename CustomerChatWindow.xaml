<Window x:Class="DJBookingSystem.CustomerChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Support Chat" Height="650" Width="900"
        Background="#000000" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Categories Sidebar -->
        <Border Grid.Column="0" BorderBrush="#00FF00" BorderThickness="1" Padding="10" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Categories" FontWeight="Bold" Foreground="#00FF00" FontSize="14" Margin="0,0,0,10"/>
                <ListBox x:Name="CategoryListBox" Background="Transparent" BorderThickness="0" 
                         SelectionChanged="Category_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="#00FF00"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                
                <Separator Background="#00FF00" Margin="0,15"/>
                
                <TextBlock Text="Quick Questions" FontWeight="Bold" Foreground="#00FF00" FontSize="12" Margin="0,0,0,10"/>
                <ListBox x:Name="QuickQuestionsListBox" Background="Transparent" BorderThickness="0"
                         MouseDoubleClick="QuickQuestion_DoubleClick">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="#00FF00"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
        
        <!-- Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="ðŸ’¬ Customer Support Assistant" FontSize="20" 
                       FontWeight="Bold" Foreground="#00FF00" Margin="0,0,0,15"/>
            
            <!-- Chat Messages -->
            <Border Grid.Row="1" BorderBrush="#00FF00" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChatMessagesPanel"/>
                </ScrollViewer>
            </Border>
            
            <!-- Suggested Questions -->
            <Border Grid.Row="2" BorderBrush="#00FF00" BorderThickness="1" Padding="8" Margin="0,0,0,10"
                    x:Name="SuggestionsPanel" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Suggested questions:" Foreground="#00FF00" FontSize="11" Margin="0,0,0,5"/>
                    <ItemsControl x:Name="SuggestedQuestionsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}" Click="SuggestedQuestion_Click" 
                                        Background="#002200" Foreground="#00FF00" BorderBrush="#00FF00"
                                        Margin="2" Padding="5,3" FontSize="11" Cursor="Hand"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Input Area -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="UserInputTextBox" Grid.Column="0" Background="#001100" 
                         Foreground="#00FF00" BorderBrush="#00FF00" Padding="10" FontSize="14"
                         KeyDown="Input_KeyDown" TextWrapping="Wrap"/>
                <Button Grid.Column="1" Content="Send" Click="Send_Click" Width="80" Margin="10,0,0,0"
                        Background="#002200" Foreground="#00FF00" BorderBrush="#00FF00" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
