<Window x:Class="DJBookingSystem.VideoTutorialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CandyBot Training Guide" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">
    <Grid>
        <!-- Black Background -->
        <Rectangle Fill="Black"/>
        
        <!-- Video Player -->
        <MediaElement x:Name="VideoPlayer"
                     LoadedBehavior="Manual"
                     UnloadedBehavior="Stop"
                     MediaEnded="VideoPlayer_MediaEnded"
                     Stretch="Uniform"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        
        <!-- Tutorial Info Panel (Top) -->
        <Border x:Name="InfoPanel"
                Background="#CC000000"
                BorderBrush="#00FF00"
                BorderThickness="2"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="20"
                Visibility="Visible">
            <StackPanel>
                <TextBlock x:Name="TutorialTitle"
                          Text="?? CandyBot Training - New User Tutorial"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#00FF00"
                          FontFamily="Consolas"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock x:Name="VideoCounter"
                          Text="Video 1 of 2"
                          FontSize="16"
                          Foreground="#00BFFF"
                          FontFamily="Consolas"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Skip Button (Only shown in optional mode) -->
        <Button x:Name="CloseButton"
                Content="? Skip Tutorial"
                FontSize="16"
                FontWeight="Bold"
                Background="#CC000000"
                Foreground="White"
                BorderBrush="Red"
                BorderThickness="2"
                Padding="15,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Click="CloseButton_Click"
                Cursor="Hand"
                Visibility="Collapsed"/>
    </Grid>
</Window>
