<Window x:Class="DJBookingSystem.CandyBotSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Candy-Bot Settings" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF69B4"/>
            <Setter Property="FontFamily" Value="Segoe UI, Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#FF69B4"
                                BorderThickness="0,0,0,3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1A0A1A"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,4"/>
                                <Setter Property="Foreground" Value="#FF1493"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2A1A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Settings Button Style -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF69B4"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontFamily" Value="Segoe UI, Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1493"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C71585"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Border with Glow -->
    <Border BorderBrush="#FF69B4" BorderThickness="2" Background="#0A0A0A" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Title Bar -->
                <RowDefinition Height="50"/>
                <!-- Tab Bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- TITLE BAR -->
            <Border Grid.Row="0" Background="#1A0A1A" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="CANDY-BOT SETTINGS" 
                              FontFamily="Consolas" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Foreground="#FF1493" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF69B4" BlurRadius="15" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <!-- Close Button -->
                    <Button Content="X" 
                           Click="Close_Click"
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Top"
                           Width="40" 
                           Height="40"
                           Margin="10"
                           Background="#FF69B4"
                           Foreground="#000000"
                           FontSize="18"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </Grid>
            </Border>
            
            <!-- TAB BAR -->
            <Border Grid.Row="1" Background="#0F0A0F" BorderBrush="#FF69B4" BorderThickness="0,1,0,1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="PersonalityTab" Content="Personality" 
                               IsChecked="True"
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton x:Name="DisplayTab" Content="Display" 
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton x:Name="AudioTab" Content="Audio" 
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton x:Name="UpdateTab" Content="Update" 
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton x:Name="KnowledgeTab" Content="Help" 
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton x:Name="AboutTab" Content="About" 
                               Checked="Tab_Checked"
                               Style="{StaticResource TabButtonStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- CONTENT AREA -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="ContentArea" Margin="30">
                    
                    <!-- PERSONALITY MODES CONTENT -->
                    <StackPanel x:Name="PersonalityContent" Visibility="Visible">
                        <TextBlock Text="Choose Your Candy-Bot Personality" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Select how Candy-Bot interacts with you:" 
                                   FontSize="12" 
                                   Foreground="#888888"
                                   Margin="0,0,0,15"/>

                        <RadioButton x:Name="NormalMode" Content="Normal - Sweet &amp; Balanced" 
                                   Tag="Normal"
                                   IsChecked="True"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Default friendly and helpful personality"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>

                        <RadioButton x:Name="ShyMode" Content="Shy - Timid &amp; Cute" 
                                   Tag="Shy"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Gentle, reserved, and adorable responses"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>

                        <RadioButton x:Name="FunnyMode" Content="Funny - Jokes &amp; Humor" 
                                   Tag="Funny"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Witty and entertaining interactions"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>

                        <RadioButton x:Name="RaunchyMode" Content="Raunchy - Flirty &amp; Bold" 
                                   Tag="Raunchy"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Playful and suggestive personality"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>

                        <RadioButton x:Name="MischievousMode" Content="Mischievous - Playful Troublemaker" 
                                   Tag="ShitStirring"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Cheeky and fun-loving responses"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>

                        <RadioButton x:Name="ProfessionalMode" Content="Professional - Formal &amp; Business" 
                                   Tag="Professional"
                                   Checked="Personality_Changed"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   Margin="0,8"/>
                        <TextBlock Text="Polished and corporate communication"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="25,0,0,15"/>
                    </StackPanel>

                    <!-- DISPLAY OPTIONS CONTENT -->
                    <StackPanel x:Name="DisplayContent" Visibility="Collapsed">
                        <TextBlock Text="Display Options" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Theme" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#FF69B4"
                                   Margin="0,0,0,10"/>
                        
                        <RadioButton x:Name="RainbowTheme" Content="Rainbow Theme" Foreground="#FFFFFF" Margin="0,5" Click="Theme_Changed"/>
                        <RadioButton x:Name="DarkTheme" Content="Dark Theme" IsChecked="True" Foreground="#FFFFFF" Margin="0,5" Click="Theme_Changed"/>
                        <RadioButton x:Name="LightTheme" Content="Light Theme" Foreground="#FFFFFF" Margin="0,5" Click="Theme_Changed"/>
                        
                        <CheckBox x:Name="AlwaysOnTopCheckbox" Content="Always On Top" 
                                 IsChecked="True" 
                                 Foreground="#FFFFFF" 
                                 Margin="0,20,0,0"
                                 Checked="AlwaysOnTop_Changed"
                                 Unchecked="AlwaysOnTop_Changed"/>
                    </StackPanel>

                    <!-- AUDIO CONTENT -->
                    <StackPanel x:Name="AudioContent" Visibility="Collapsed">
                        <TextBlock Text="Audio Settings" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Voice Enable/Disable -->
                        <CheckBox x:Name="VoiceEnabledCheckbox"
                                 Content="Enable Voice"
                                 IsChecked="True"
                                 Foreground="#FFFFFF"
                                 FontSize="14"
                                 FontWeight="Bold"
                                 Margin="0,0,0,20"
                                 Checked="Voice_Changed"
                                 Unchecked="Voice_Changed"/>
                        
                        <TextBlock Text="Speech Rate" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#FF69B4"
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Slower" 
                                       FontSize="11" 
                                       Foreground="#888888"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Slider x:Name="SpeechRateSlider"
                                   Minimum="-2"
                                   Maximum="2"
                                   Value="0"
                                   Width="350"
                                   VerticalAlignment="Center"
                                   ValueChanged="SpeechRate_Changed"/>
                            <TextBlock Text="Faster" 
                                       FontSize="11" 
                                       Foreground="#888888"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="SpeechRateLabel"
                                   Text="Normal Speed"
                                   FontSize="12"
                                   Foreground="#00FF00"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,20"/>

                        <Button Content="Test Voice"
                               Click="TestVoice_Click"
                               Style="{StaticResource SettingsButtonStyle}"
                               HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- UPDATE CONTENT -->
                    <StackPanel x:Name="UpdateContent" Visibility="Collapsed">
                        <TextBlock Text="Check for Updates" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock x:Name="UpdateStatusText"
                                   Text="Click button to check for updates"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="0,0,0,20"/>
                        
                        <Button Content="Check for Updates Now"
                               Click="CheckUpdate_Click"
                               Style="{StaticResource SettingsButtonStyle}"
                               HorizontalAlignment="Left"/>
                        
                        <TextBlock x:Name="CurrentVersionText"
                                   Text="Current Version: 2.0.0"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- KNOWLEDGE BASE CONTENT -->
                    <StackPanel x:Name="KnowledgeContent" Visibility="Collapsed">
                        <TextBlock Text="Knowledge Base" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Help &amp; Documentation"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="0,0,0,20"
                                   TextWrapping="Wrap"/>
                        
                        <Button Content="Open User Guide"
                               Click="OpenUserGuide_Click"
                               Style="{StaticResource SettingsButtonStyle}"
                               HorizontalAlignment="Left"
                               Margin="0,5"/>
                        
                        <Button Content="Keyboard Shortcuts"
                               Click="OpenShortcuts_Click"
                               Style="{StaticResource SettingsButtonStyle}"
                               HorizontalAlignment="Left"
                               Margin="0,5"/>
                        
                        <Button Content="FAQ"
                               Click="OpenFAQ_Click"
                               Style="{StaticResource SettingsButtonStyle}"
                               HorizontalAlignment="Left"
                               Margin="0,5"/>
                    </StackPanel>

                    <!-- ABOUT CONTENT -->
                    <StackPanel x:Name="AboutContent" Visibility="Collapsed">
                        <TextBlock Text="About Candy-Bot" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1493"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock x:Name="VersionText"
                                   Text="Version: 2.0.0"
                                   FontSize="14"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Your AI-Powered Desktop Companion"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="0,0,0,20"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Features:" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#FF69B4"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock FontSize="12" Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="22">
                            <Run Text="* Voice Interaction &amp; Text-to-Speech"/>
                            <LineBreak/>
                            <Run Text="* Multiple Personality Modes"/>
                            <LineBreak/>
                            <Run Text="* File Search &amp; Management"/>
                            <LineBreak/>
                            <Run Text="* Code Generation &amp; AI Tools"/>
                            <LineBreak/>
                            <Run Text="* Web Search &amp; Chat"/>
                            <LineBreak/>
                            <Run Text="* DJ Booking Integration"/>
                            <LineBreak/>
                            <Run Text="* Desktop Widget Mode"/>
                            <LineBreak/>
                            <Run Text="* Auto-Updates"/>
                        </TextBlock>
                        
                        <TextBlock Text="(C) 2024 Candy-Bot AI. All rights reserved."
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="0,30,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
