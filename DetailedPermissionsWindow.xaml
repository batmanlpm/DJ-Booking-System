<Window x:Class="DJBookingSystem.DetailedPermissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DJBookingSystem.Controls"
        Title="Detailed Permissions" Height="700" Width="900" MaxWidth="900" MaxHeight="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="Black">
    <Grid Margin="20" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,0,10">
            <controls:FancyHeading Text="Detailed Permissions" HorizontalAlignment="Center" Margin="0,0,20,0"/>
            <CheckBox x:Name="StayOnTopCheckBox" Content="Stay On Top" Margin="20,0,0,0" VerticalAlignment="Center" 
                      Checked="StayOnTopCheckBox_Checked" Unchecked="StayOnTopCheckBox_Unchecked" 
                      Foreground="#00FF00" Background="Black"/>
        </StackPanel>
        <TextBlock x:Name="UserInfoTextBlock" Grid.Row="0" FontSize="14" Foreground="#00FF00" 
                   Margin="0,50,0,10" VerticalAlignment="Bottom"/>

        <!-- Permissions Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <StackPanel>
                <!-- DJ Booking Permissions -->
                <Expander Header="DJ Booking Permissions" IsExpanded="True" Margin="0,0,0,10" 
                          Background="#3498DB" BorderBrush="Green" BorderThickness="2">
                    <Border Padding="20" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="View Bookings" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" x:Name="CanViewBookingsCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Create Bookings" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" x:Name="CanCreateBookingsCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Edit Bookings" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="2" Grid.Column="1" x:Name="CanEditBookingsCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Delete Bookings" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="3" Grid.Column="1" x:Name="CanDeleteBookingsCheckBox" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Expander>

                <!-- Venue Management Permissions -->
                <Expander Header="Venue Management Permissions" IsExpanded="True" Margin="0,0,0,10">
                    <Border Background="#27AE60" Padding="20" Margin="0,5,0,0" BorderBrush="Green" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="View Venues" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" x:Name="CanViewVenuesCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Register New Venues" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" x:Name="CanRegisterVenuesCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Edit Venue Details" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="2" Grid.Column="1" x:Name="CanEditVenuesCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Delete Venues" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="3" Grid.Column="1" x:Name="CanDeleteVenuesCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Toggle Venue Status (Open/Closed)" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="4" Grid.Column="1" x:Name="CanToggleVenueStatusCheckBox" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Expander>

                <!-- System Administration Permissions -->
                <Expander Header="System Administration Permissions" IsExpanded="True" Margin="0,0,0,10">
                    <Border Background="#9B59B6" Padding="20" Margin="0,5,0,0" BorderBrush="Green" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Manage Users (Create, Edit, Delete Accounts)" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" x:Name="CanManageUsersCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Customize App (Theme, Features)" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" x:Name="CanCustomizeAppCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Access System Settings" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="2" Grid.Column="1" x:Name="CanAccessSettingsCheckBox" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Expander>

                <!-- RadioBOSS Control Permissions -->
                <Expander Header="RadioBOSS Cloud Control Permissions" IsExpanded="True" Margin="0,0,0,10">
                    <Border Background="#E67E22" Padding="20" Margin="0,5,0,0" BorderBrush="Green" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="View RadioBOSS Panel (Read-Only Access)" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" x:Name="CanViewRadioBossCheckBox" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Control RadioBOSS (Execute Commands, Modify Settings)" Foreground="White" Margin="0,5"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" x:Name="CanControlRadioBossCheckBox" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Expander>

                <!-- Permission Summary -->
                <Border Background="#34495E" Padding="20" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Permission Summary"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>
                        <TextBlock x:Name="PermissionSummaryTextBlock"
                                  Foreground="White"
                                  TextWrapping="Wrap"
                                  FontSize="12"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save Changes"
                   Click="Save_Click"
                   Padding="25,12"
                   Margin="5"
                   Background="#27AE60"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"/>
            <Button Content="Cancel"
                   Click="Cancel_Click"
                   Padding="25,12"
                   Margin="5"
                   Background="#95A5A6"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
